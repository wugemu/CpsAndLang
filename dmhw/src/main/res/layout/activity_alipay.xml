<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context=".activity.AlipayActivity">

    <View
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_18"
                android:layout_margin="@dimen/dp_9"
                android:scaleType="centerCrop"
                android:src="@mipmap/btn_back_default" />

        </LinearLayout>

        <TextView
            android:id="@+id/alipay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="修改支付宝"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:background="@drawable/personal_grid_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:gravity="center_vertical"
            android:orientation="horizontal"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/alipay_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入真实姓名"
                android:lines="1"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="@dimen/sp_14"
                tools:ignore="HardcodedText"
                android:textCursorDrawable="@drawable/my_cursor"
                android:cursorVisible="true" />

            <LinearLayout
                android:id="@+id/alipay_name_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/search_close"
                    android:tint="#c2c2c2" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#EEEEEE"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝号"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/alipay_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入支付宝账号"
                android:lines="1"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="@dimen/sp_14"
                tools:ignore="HardcodedText"
                android:textCursorDrawable="@drawable/my_cursor"
                android:cursorVisible="true"/>

            <LinearLayout
                android:id="@+id/alipay_account_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/search_close"
                    android:tint="#c2c2c2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nohasalipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#EEEEEE"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/alipay_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="@dimen/sp_14"
                tools:text="13812345678" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#EEEEEE"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/alipay_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:lines="1"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="@dimen/sp_14"
                tools:ignore="HardcodedText"
                android:textCursorDrawable="@drawable/my_cursor"
                android:cursorVisible="true" />

            <LinearLayout
                android:id="@+id/alipay_code_btn"
                android:layout_width="@dimen/dp_101"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/bg_rect_black_20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/alipay_code_btn_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/alipay_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_11"
        android:textColor="#fffc0f3c"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_12"
        android:text="说明：  支付宝以及姓名一经绑定将无法修改"
        tools:ignore="HardcodedText,SmallSp"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/alipay_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/nocheck_btn_bg"
        android:gravity="center">

        <TextView
            android:id="@+id/alipay_btn_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认修改"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>
