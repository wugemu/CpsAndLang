<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lxkj.dmhw.activity.BindBankCardActivity">
    <include layout="@layout/lang_common_top"
        android:id="@+id/top"
        />
    <ScrollView
       
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBackGroud2"
            android:padding="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:padding="15dp"
                >
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/colorBlackText"
                    android:text="开户行"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:enabled="false"
                    android:textColorHint="@color/color_cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/et_select_bank"
                    android:background="@drawable/bg_band_bank_input"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:hint="请选择开户行"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlackText"
                    android:drawableRight="@mipmap/grey_arrow_down"
                    />

