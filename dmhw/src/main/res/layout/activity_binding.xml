<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BindingActivity">

    <View
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_18"
                android:layout_margin="@dimen/dp_9"
                android:scaleType="centerCrop"
                android:src="@mipmap/btn_back_default" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="绑定账户"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18"
    tools:ignore="HardcodedText" />

</RelativeLayout>

<View
android:layout_width="match_parent"
android:layout_height="@dimen/dp_0_5"
android:background="#f2f2f2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F4F4"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


     <ImageView
         android:layout_width="@dimen/dp_100"
         android:layout_height="@dimen/dp_100"
         android:src="@mipmap/banding_top_image"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="@dimen/dp_30"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机绑定，账号安全无忧购"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_13"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999999"

            />

<LinearLayout
android:layout_width="match_parent"
android:layout_height="@dimen/dp_40"
android:layout_marginTop="@dimen/dp_50"
android:layout_marginLeft="@dimen/dp_23"
android:layout_marginRight="@dimen/dp_23"
android:gravity="center_vertical"
android:orientation="horizontal">

<LinearLayout
    android:id="@+id/wechat_name_layout"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:background="@drawable/banding_wechat_name_unselect"
    >
    <ImageView
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_16"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_15"
         android:src="@mipmap/phone"
        />
    <EditText
        android:id="@+id/binding_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="11"
        android:textSize="@dimen/sp_15"
        android:textColor="#666666"
        android:textColorHint="#C7C6C6"
        android:hint="请输入手机号"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        tools:ignore="HardcodedText,NestedWeights,TextFields"
        android:textCursorDrawable="@drawable/my_cursor"
        android:cursorVisible="true" />



</LinearLayout>



</LinearLayout>

<LinearLayout
    android:id="@+id/wechat_code_layout"
android:layout_width="match_parent"
android:layout_height="@dimen/dp_40"
android:layout_marginLeft="@dimen/dp_23"
android:layout_marginRight="@dimen/dp_23"
android:layout_marginTop="@dimen/dp_20"
android:background="@drawable/banding_wechat_name_unselect"
android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_16"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@mipmap/code"
        />
<EditText
    android:id="@+id/binding_code"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@null"
    android:digits="1234567890"
    android:inputType="number"
    android:maxLength="6"
    android:textSize="@dimen/sp_15"
    android:textColor="#666666"
    android:textColorHint="#C7C6C6"
    android:hint="请输入验证码"
    tools:ignore="HardcodedText"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_5"
    android:layout_gravity="center_vertical"
    android:textCursorDrawable="@drawable/my_cursor"
    android:cursorVisible="true"
    />

    <LinearLayout
        android:id="@+id/binding_code_btn"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_5"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:background="@drawable/banding_wechat_code_style"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_gravity="center_vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/binding_code_btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#FFFFFF"
            android:text="发送验证码"
            tools:ignore="HardcodedText"

            />

    </LinearLayout>

</LinearLayout>

<LinearLayout
android:id="@+id/binding_btn"
android:layout_width="match_parent"
android:layout_height="@dimen/dp_40"
android:layout_marginLeft="@dimen/dp_23"
android:layout_marginRight="@dimen/dp_23"
android:layout_marginTop="@dimen/dp_60"
android:background="@drawable/banding_wechat_btn_style"
android:gravity="center">

<TextView
    android:id="@+id/binding_btn_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/sp_18"
    android:textColor="@color/white"
    android:text="确认绑定"
    tools:ignore="HardcodedText" />

</LinearLayout>
        <LinearLayout
            android:id="@+id/register_agreement_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11"
                android:textColor="#999"
                android:text="登录即代表您已同意NN俱乐部"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/register_agreement_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11"
                android:textColor="#FF2741"
                android:text="《用户协议》"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11"
                android:textColor="#999"
                android:text="与"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/register_agreement_secret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11"
                android:textColor="#FF2741"
                android:text="《隐私政策》"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
