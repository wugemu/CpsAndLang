<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f2f2f2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/bottom_layout"
        >
    <View
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_18"
                android:layout_margin="@dimen/dp_9"
                android:scaleType="centerCrop"
                android:src="@mipmap/btn_back_default" />

        </LinearLayout>

        <TextView
            android:id="@+id/mTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:lines="1"
            android:maxEms="6"
            android:ellipsize="end"
            tools:text="文章详情"
            android:textColor="#313131"
            android:textSize="@dimen/sp_18"
            tools:ignore="HardcodedText" />

    </RelativeLayout>
    <TextView
        android:id="@+id/articleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:lineSpacingExtra="@dimen/dp_5"
        tools:text="文章详情文章详情文章详情文章详情文章详情文章详情"
        android:textColor="#333333"
        android:textSize="@dimen/sp_22"
        tools:ignore="HardcodedText"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/ques_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_15"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/questime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="#999999"
            android:layout_gravity="center_vertical"
            tools:text="2020-01-25"/>
        <TextView
            android:id="@+id/quesreadnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="#999"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_25"
            tools:text="1000已读"/>

    </LinearLayout>
        <LinearLayout
            android:id="@+id/article_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_11"
                android:src="@mipmap/cc_like"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/likenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_3"
                android:gravity="center"
                android:textColor="#999"
                android:textSize="@dimen/sp_14"
                tools:text="1000次" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/articlereadnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:textColor="#999"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                tools:text="1000人已学习"/>
            <TextView
                android:id="@+id/articletime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:textColor="#999999"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                tools:text="2020-01-25"/>

        </LinearLayout>
    <com.tencent.smtt.sdk.WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:scrollbars="none"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
            <LinearLayout
                android:id="@+id/catelog_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_25"
                >
                <ImageView
                    android:id="@+id/catelog_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/article_list"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/catelog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目录"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/like_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:id="@+id/cc_like_img"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/cc_like"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/cc_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/share_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_25"
                >
                <ImageView
                    android:id="@+id/share_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/cc_share"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/cc_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="HardcodedText" />

            </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
