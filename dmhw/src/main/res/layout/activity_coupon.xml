<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGroud"
    tools:context="com.lxkj.dmhw.activity.self.coupon.CouponActivity">
    <include
        android:id="@+id/top"
        layout="@layout/lang_common_top" />
    <com.ahtrun.mytablayout.CouponTabLayout
        android:layout_below="@+id/top"
        android:id="@+id/tab_coupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include
        android:layout_below="@+id/top"
        layout="@layout/lang_common_nonet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include
        android:layout_below="@+id/top"
        layout="@layout/lang_common_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>