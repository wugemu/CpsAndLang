<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f4f4f4"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ApplyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <View
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="@dimen/dp_9"
                    android:layout_height="@dimen/dp_18"
                    android:layout_margin="@dimen/dp_9"
                    android:tint="@color/color_999999"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/btn_back_default" />

            </LinearLayout>

            <TextView
                android:id="@+id/income_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/color_333333"
                android:text="我的收益"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_147"
            android:orientation="vertical"
            android:background="@mipmap/taobao_income_bg"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            >

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_20"
                    >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            android:text="淘宝收益"
                            android:textColor="#ffffff"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/sp_15"
                            tools:ignore="HardcodedText" />


                    <TextView
                        android:id="@+id/income_detail_btn"
                        android:layout_width="@dimen/dp_71"
                        android:layout_height="@dimen/dp_24"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:background="@drawable/income_btn_bg"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:text="查看详情"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13" />
                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/myteamtoday_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_25"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/today_layout_01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/income_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_24"
                            android:textStyle="bold"
                            tools:text="169" />
                        <TextView
                            android:id="@+id/tv_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingMultiplier="0.9"
                            android:layout_below="@+id/income_01"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="可提金额(元)"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/sp_13" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/today_layout_02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/income_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_24"
                            android:textStyle="bold"
                            tools:text="169" />

                        <TextView
                            android:id="@+id/tv_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/income_02"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="总金额(元)"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/sp_13" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_147"
            android:orientation="vertical"
            android:background="@mipmap/pl_income_bg"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_20"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:lineSpacingMultiplier="0.9"
                        android:text="平台收益"
                        android:textColor="#ffffff"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_15"
                        tools:ignore="HardcodedText" />


                    <TextView
                        android:id="@+id/pl_income_detail_btn"
                        android:layout_width="@dimen/dp_71"
                        android:layout_height="@dimen/dp_24"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:background="@drawable/income_btn_bg"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:text="查看详情"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13" />
                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_25"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/income_layout_01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/pl_income_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_24"
                            android:textStyle="bold"
                            tools:text="169" />
                        <TextView
                            android:id="@+id/pl_tv_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingMultiplier="0.9"
                            android:layout_below="@+id/pl_income_01"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="可提金额(元)"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/sp_13" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/income_layout_02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/pl_income_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_24"
                            android:textStyle="bold"
                            tools:text="169" />

                        <TextView
                            android:id="@+id/pl_tv_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pl_income_02"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="总金额(元)"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/sp_13" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

</LinearLayout>

</LinearLayout>
