<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_0_5"
       android:background="#eeeeee"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_14"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="#777777"
                android:text="直属会员"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:id="@+id/count_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_19"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    tools:text="999"
                    />
                    <ImageView
                        android:id="@+id/team_my_arr_iv"
                        android:layout_width="@dimen/dp_5"
                        android:layout_height="@dimen/dp_8"
                        android:src="@mipmap/team_my_arr"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/team_tuiguang_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                   android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_6"
                    >
                   <RelativeLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       >

                       <com.lxkj.dmhw.view.RoundProgressBar
                           android:id="@+id/roundProgressBar"
                           android:layout_width="@dimen/dp_36"
                           android:layout_height="@dimen/dp_36"
                           app:roundColor="#F2F2F2"
                           app:roundProgressColor="#000000"
                           app:textColor="#9A32CD"
                           app:textIsDisplayable="false"
                           app:roundWidth="5dip"
                           app:startAngle="120"
                           app:textSize="18sp"/>


                       <TextView
                        android:id="@+id/comm_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_9"
                        android:textColor="#333333"
                        android:layout_centerInParent="true"
                        android:text="22%"
                        />
                   </RelativeLayout>
                    <TextView
                    android:id="@+id/fenrun_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_9"
                    android:textColor="@color/color_999999"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:background="@mipmap/tuiguangjiangli"
                    android:text="推广奖励"
                    />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/month_money_layotu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <View
                android:id="@+id/split_item"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_0_5"
                android:background="#eeeeee"
                android:layout_marginTop="@dimen/dp_5"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/total_money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本月贡献"
                    android:textColor="#ff999999"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="￥125600.00"
                    android:textColor="#ff666666"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/dp_2"
                    />

            </LinearLayout>



            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
        <View
            android:id="@+id/item_split"
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            />
    </LinearLayout>
</LinearLayout>
