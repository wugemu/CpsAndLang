<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <ImageView
            android:id="@+id/task_top_unlogin_bg_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_260"
            android:scaleType="centerCrop"
            android:src="@mipmap/four_fragment_top_bg"
            />
       <LinearLayout
           android:id="@+id/user_info_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <View
               android:id="@+id/status_bar"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_10"
              android:visibility="gone"
               />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="现金余额"
               android:textSize="@dimen/sp_12"
               android:textColor="@color/white"
               android:layout_gravity="center"
               />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ "
                    android:textSize="@dimen/sp_17"
                    android:textColor="@color/white"
                    />
                <com.lxkj.dmhw.utils.RiseNumberTextView
                    android:id="@+id/money_top_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="0.00"
                    android:textSize="@dimen/sp_24"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/withdraw_txt"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_28"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#F3D8C2"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="提现"
                android:textColor="#4A392A"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

         <View
             android:layout_width="@dimen/dp_1"
             android:layout_height="@dimen/dp_23"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="@dimen/dp_35"
             android:background="@color/white"
             />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NN币"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    />

                    <com.lxkj.dmhw.utils.RiseNumberTextView
                        android:id="@+id/dmb_top_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:text="0"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_24"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                <TextView
                    android:id="@+id/exchange_txt"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_28"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_rect_strock_white_2dp"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="兑换"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
        </LinearLayout>
       </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_180"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_10"
        android:descendantFocusability="blocksDescendants"
        >
        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/my_task_new_vertical_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_74"
            android:background="#00000000"
            app:animDuration="300"
            app:gap="3000"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f4f2f2"
        android:paddingTop="@dimen/dp_5"
        >
    <LinearLayout
        android:id="@+id/task_new_layout_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/white_background_style"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_12"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新人任务"
                android:textSize="@dimen/sp_17"
                android:textColor="#999999"
                />
            <TextView
                android:id="@+id/fresh_cnt_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                tools:text="1"
                android:textSize="@dimen/sp_17"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/fresh_cnt_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="/4"
                android:textSize="@dimen/sp_17"
                android:textColor="#D2D0D0"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/task_new_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:descendantFocusability="blocksDescendants"
           android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/task_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="#00000000"
                android:overScrollMode="never"
                />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_everyday_layout_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/white_background_style"
        android:orientation="vertical"
        android:layout_below="@+id/task_new_layout_ll"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_12"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日常任务"
                android:textSize="@dimen/sp_17"
                android:textColor="#999999"
                />
            <TextView
                android:id="@+id/day_cnt_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                tools:text="1"
                android:textSize="@dimen/sp_17"
                android:textColor="#FE5349"
                />
            <TextView
                android:id="@+id/day_cnt_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="/12"
                android:textSize="@dimen/sp_17"
                android:textColor="#D2D0D0"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/task_everyday_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:descendantFocusability="blocksDescendants"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/task_everyday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="#00000000"
                android:overScrollMode="never"
                />
        </RelativeLayout>


    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <View
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        />
    <LinearLayout
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        >

        <ImageView
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_18"
            android:layout_margin="@dimen/dp_9"
            android:scaleType="centerCrop"
            android:tint="@color/white"
            android:src="@mipmap/btn_back_default" />

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
