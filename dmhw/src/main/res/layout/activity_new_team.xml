<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f6f6f6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TeamNewActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">
    <View
        android:id="@+id/one_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_gradient_bg"/>
    <com.lxkj.dmhw.view.ArcBackgroundView
        android:id="@+id/one_view_mask"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        app:ArcBackgroundViewEndColor="#f6f6f6"
        app:ArcBackgroundViewStartColor="#f6f6f6"
        app:ArcBackgroundViewTopHeight="30dp"
        android:layout_alignParentBottom="true"
        />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_2"
                >

                <ImageView
                 android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_18"
                android:layout_margin="@dimen/dp_9"
                android:tint="@color/white"
                android:scaleType="centerCrop"
                android:src="@mipmap/btn_back_default" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="0.9"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="我的团队"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        tools:ignore="HardcodedText" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/white_background_style"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:text="今日新增"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
              <LinearLayout
                  android:id="@+id/tuijain_layout"
                  android:layout_width="@dimen/dp_81"
                  android:layout_height="@dimen/dp_40"
                  android:orientation="horizontal"
                  android:background="@mipmap/team_recoommbg"
                  android:layout_alignParentRight="true"
                  >
                  <ImageView
                      android:id="@+id/team_image"
                      android:layout_width="@dimen/dp_24"
                      android:layout_height="@dimen/dp_24"
                      android:scaleType="centerCrop"
                      tools:ignore="ContentDescription"
                      android:layout_gravity="center_vertical"
                      android:layout_marginStart="@dimen/dp_6"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginStart="@dimen/dp_5"
                      android:text="推荐人"
                      android:textColor="#8B3E0B"
                      android:textSize="@dimen/sp_11"
                      android:textStyle="bold"
                      tools:ignore="HardcodedText,SmallSp" />

              </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/myteamtoday_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/today_layout_01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/team_agent_one"
                        android:layout_width="@dimen/dp_79"
                        android:layout_height="@dimen/dp_79">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="0dp"
                            android:gravity="center"
                            android:orientation="vertical">



                                <TextView
                                    android:id="@+id/team_today_cnt_01"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:lineSpacingMultiplier="0.9"
                                    android:textColor="@color/color_333333"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/sp_20"
                                    tools:text="1" />



                            <TextView
                                android:id="@+id/team_today_title_01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="直属会员"
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/sp_11"
                                android:layout_marginTop="@dimen/dp_5"
                                tools:ignore="HardcodedText,SmallSp" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/today_layout_02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/team_agent_two"
                        android:layout_width="@dimen/dp_79"
                        android:layout_height="@dimen/dp_79">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/team_today_cnt_02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                android:textColor="@color/color_333333"
                                android:textStyle="bold"
                                android:textSize="@dimen/sp_20"
                                tools:text="2" />



                            <TextView
                                android:id="@+id/team_today_title_02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="二级会员"
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/sp_11"
                                android:layout_marginTop="@dimen/dp_5"
                                tools:ignore="HardcodedText,SmallSp" />


                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/today_layout_03"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/team_fans"
                        android:layout_width="@dimen/dp_79"
                        android:layout_height="@dimen/dp_79">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/team_today_cnt_03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                android:textColor="@color/color_333333"
                                android:textStyle="bold"
                                android:textSize="@dimen/sp_20"
                                tools:text="3" />



                            <TextView
                                android:id="@+id/team_today_title_03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="直属店主"
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/sp_11"
                                android:layout_marginTop="@dimen/dp_5"
                                tools:ignore="HardcodedText,SmallSp" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/white_background_style"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="团队成员"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/total_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        tools:text="555555"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_20"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

            </LinearLayout>
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/dp_5"
                 android:layout_marginStart="@dimen/dp_15"
                 android:layout_marginEnd="@dimen/dp_15"
                 android:background="@drawable/time_bg_style"
                 >
               <LinearLayout
                android:id="@+id/team_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:paddingStart="@dimen/dp_14"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_5">

                <ImageView
                    android:id="@+id/team_calendar"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/team_time_icon"
                    />

                <TextView
                    android:id="@+id/team_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_13"
                    tools:text="" />

                <View
                    android:id="@+id/split_tv"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/team_time_split" />


                <TextView
                    android:id="@+id/team__end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_13"
                    tools:text="" />


                <ImageView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/sanjiao"
                    />
            </LinearLayout>
             </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_my_team_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:listSelector="#00000000" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
