<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.self.order.OrderDetialActivity">

    <include
        android:id="@+id/top"
        layout="@layout/lang_common_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:scrollbars="none"
        android:background="@color/colorWhite"
        android:id="@+id/lv_order_detial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/top"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_gift_refund_tip"
            android:background="#FEF8DC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cart_notice"
                />

            <TextView
                android:layout_marginLeft="8dp"
                android:textColor="#A0997D"
                android:textSize="12sp"
                android:text="如需申请退款，请联系素店客服进行办理。您的素店优选商品订单如果产生退款，您将不再享有玩主权益。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_order_service"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/iv_order_service"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/icon_kf" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客服"
                    android:textColor="@color/colorBlackText"
                    android:textSize="10sp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:id="@+id/ll_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/bt_order_cancel"
                    android:layout_width="73dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_rect_stroke_black2_9dp"
                    android:gravity="center"
                    android:text="取消订单"
                    android:textColor="@color/colorBlackText3"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/bt_order_del"
                    android:layout_width="73dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_rect_stroke_black2_9dp"
                    android:gravity="center"
                    android:text="删除订单"
                    android:textColor="@color/colorBlackText3"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/bt_order_refund"
                    android:layout_width="73dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/bg_rect_stroke_black2_9dp"
                    android:gravity="center"
                    android:text="申请售后"
                    android:textColor="@color/colorBlackText3"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/bt_order_ckwl"
                    android:layout_width="73dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/bg_rect_stroke_black2_9dp"
                    android:gravity="center"
                    android:text="查看物流"
                    android:textColor="@color/colorBlackText3"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/bt_order_ddwj"
                    android:layout_width="73dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/bg_rect_stroke_black2_9dp"
                    android:gravity="center"
                    android:text="完结订单"
                    android:textColor="@color/colorBlackText3"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/bt_order_qrsh"
                    android:layout_width="73dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/bg_rect_stroke_red_25dp"
                    android:gravity="center"
                    android:text="确认收货"
                    android:textColor="@color/colorRedMain"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/bt_order_pay_again"
                    android:layout_width="73dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/bg_rect_stroke_black2_9dp"
                    android:gravity="center"
                    android:text="再次购买"
                    android:textColor="@color/colorBlackText3"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/bt_order_pay"
                    android:layout_width="73dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/bg_rect_red_25dp"
                    android:gravity="center"
                    android:text="立即付款"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:id="@+id/bt_order_group_share"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_rect_red_25dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/view_toview_two"/>

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ll_right"
                android:layout_alignTop="@+id/ll_right"
                android:layout_toLeftOf="@+id/ll_right"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color"/>
        </RelativeLayout>

    </LinearLayout>


    <include layout="@layout/lang_common_nonet"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include layout="@layout/lang_common_loading"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
