<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PosterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="@dimen/dp_9"
                        android:layout_height="@dimen/dp_18"
                        android:layout_margin="@dimen/dp_9"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/btn_back_default" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:layout_centerVertical="true"
                    android:text="分享邀请"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_18"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/invite_rule_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="邀请说明"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_15"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_15"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:gravity="bottom"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:background="@mipmap/poster_title_one">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:layout_weight="1.26"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/mainColor"
                            android:text="我的邀请码"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/poster_invitation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textSize="@dimen/sp_23"
                            android:textColor="@color/mainColor"
                            android:textStyle="bold"
                            tools:text="100222"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/poster_copy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.74"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_19"
                            android:textColor="@color/mainColor"
                            android:text="复制"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_110"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_19"
                    android:paddingEnd="@dimen/dp_19"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@mipmap/poster_title_two">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:lineSpacingMultiplier="0.9"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/mainColor"
                        android:text="邀请规则"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:includeFontPadding="false"
                        android:lineSpacingMultiplier="0.9"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/mainColor"
                        android:text="1.直接复制邀请码给好友下载APP注册填写"
                        tools:ignore="HardcodedText,SmallSp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:includeFontPadding="false"
                        android:lineSpacingMultiplier="0.9"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/mainColor"
                        android:text="2.分享海报中的二维码已经包含您的邀请信息"
                        tools:ignore="HardcodedText,SmallSp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:includeFontPadding="false"
                        android:lineSpacingMultiplier="0.9"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/mainColor"
                        android:text="3.好友通过您的邀请码或者邀请海报下载并使用APP后，未来Ta的订单佣金您都有奖励，会自动计入您的账户中"
                        tools:ignore="HardcodedText,SmallSp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <com.tmall.ultraviewpager.UltraViewPager
        android:id="@+id/poster_pager_ultra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/invite_bottom_layout"
        tools:ignore="ObsoleteLayoutParam" />


    <LinearLayout
        android:id="@+id/invite_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_101"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_20"
            >

            <LinearLayout
                android:id="@+id/poster_share_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@mipmap/invite_bottom_share1">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/invite_share_icon1"
                    />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    android:text="分享海报"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_20"
            >

            <LinearLayout
                android:id="@+id/poster_share_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@mipmap/invite_bottom_share2">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/invite_share_icon2" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:text="分享APP"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
