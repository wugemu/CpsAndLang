                        android:layout_marginEnd="@dimen/dp_5"
                        android:gravity="right"
                        tools:ignore="RtlHardcoded">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_m_7"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/sign_day_triangle_seven"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:background="@drawable/sign_progress_triangle_up"/>

                            <LinearLayout
                                android:id="@+id/sign_day_square_seven"
                                android:layout_width="@dimen/dp_19"
                                android:layout_height="@dimen/dp_22"
                                android:gravity="center"
                                android:background="@drawable/sign_progress_square_up">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    android:includeFontPadding="false"
                                    android:lineSpacingMultiplier="0.9"
                                    android:textColor="@color/white"
                                    android:text="7"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25">

                <ImageView
                    android:layout_width="@dimen/dp_63"
                    android:layout_height="@dimen/dp_85"
                    android:background="@mipmap/sign_one"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_85"
                    android:background="@drawable/sign_two"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/sign_text_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:text="连续签到3天，明天签到可获得20金币!"/>

                    <TextView
                        android:id="@+id/sign_text_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/white"
                        tools:text="再签到4天，可额外获得60金币"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/sign_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_64"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@mipmap/sign_invitation"/>

        </LinearLayout>

    </RelativeLayout>

