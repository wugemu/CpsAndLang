                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/sign_score_layout_six"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_13"
                            android:background="@drawable/sign_progress_score_background_up"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/sign_score_text_six"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_11"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                android:textColor="@color/white"
                                tools:text="+5"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/sign_score_layout_seven"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_13"
                            android:background="@drawable/sign_progress_score_background_up"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/sign_score_text_seven"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_11"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                android:textColor="@color/white"
                                tools:text="+5"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/sign_progress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:max="7"
                    android:progress="0"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/sign_progress_color"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_24"
                        android:gravity="right"
                        tools:ignore="RtlHardcoded">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_m_7"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/sign_day_triangle_one"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:background="@drawable/sign_progress_triangle_up"/>

                            <LinearLayout
                                android:id="@+id/sign_day_square_one"
                                android:layout_width="@dimen/dp_19"
                                android:layout_height="@dimen/dp_22"
                                android:gravity="center"
                                android:background="@drawable/sign_progress_square_up">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    android:includeFontPadding="false"
                                    android:lineSpacingMultiplier="0.9"
                                    android:textColor="@color/white"
                                    android:text="1"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        tools:ignore="RtlHardcoded">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_m_7"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/sign_day_triangle_two"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:background="@drawable/sign_progress_triangle_up"/>

                            <LinearLayout
                                android:id="@+id/sign_day_square_two"
                                android:layout_width="@dimen/dp_19"
                                android:layout_height="@dimen/dp_22"
                                android:gravity="center"
                                android:background="@drawable/sign_progress_square_up">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    android:includeFontPadding="false"
                                    android:lineSpacingMultiplier="0.9"
                                    android:textColor="@color/white"
                                    android:text="2"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        tools:ignore="RtlHardcoded">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_m_7"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/sign_day_triangle_three"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:background="@drawable/sign_progress_triangle_up"/>

                            <LinearLayout
                                android:id="@+id/sign_day_square_three"
                                android:layout_width="@dimen/dp_19"
                                android:layout_height="@dimen/dp_22"
                                android:gravity="center"
                                android:background="@drawable/sign_progress_square_up">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    android:includeFontPadding="false"
                                    android:lineSpacingMultiplier="0.9"
                                    android:textColor="@color/white"
                                    android:text="3"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        tools:ignore="RtlHardcoded">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_m_7"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/sign_day_triangle_four"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:background="@drawable/sign_progress_triangle_up"/>

                            <LinearLayout
                                android:id="@+id/sign_day_square_four"
                                android:layout_width="@dimen/dp_19"
                                android:layout_height="@dimen/dp_22"
                                android:gravity="center"
                                android:background="@drawable/sign_progress_square_up">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    android:includeFontPadding="false"
                                    android:lineSpacingMultiplier="0.9"
                                    android:textColor="@color/white"
                                    android:text="4"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        tools:ignore="RtlHardcoded">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_m_7"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/sign_day_triangle_five"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:background="@drawable/sign_progress_triangle_up"/>

                            <LinearLayout
                                android:id="@+id/sign_day_square_five"
                                android:layout_width="@dimen/dp_19"
                                android:layout_height="@dimen/dp_22"
                                android:gravity="center"
                                android:background="@drawable/sign_progress_square_up">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    android:includeFontPadding="false"
                                    android:lineSpacingMultiplier="0.9"
                                    android:textColor="@color/white"
                                    android:text="5"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        tools:ignore="RtlHardcoded">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_m_7"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/sign_day_triangle_six"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:background="@drawable/sign_progress_triangle_up"/>

                            <LinearLayout
                                android:id="@+id/sign_day_square_six"
                                android:layout_width="@dimen/dp_19"
                                android:layout_height="@dimen/dp_22"
                                android:gravity="center"
                                android:background="@drawable/sign_progress_square_up">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    android:includeFontPadding="false"
                                    android:lineSpacingMultiplier="0.9"
                                    android:textColor="@color/white"
                                    android:text="6"
