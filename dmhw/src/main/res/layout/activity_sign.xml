                    android:gravity="center"
                    android:background="@drawable/sign_header_background">

                    <TextView
                        android:id="@+id/sign_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#666666"
                        tools:text="测试测试测试测试"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sign_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:textColor="#ff9800"
                            tools:text="35"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#666666"
                            android:text="NN币"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_91"
                    android:layout_height="@dimen/dp_91"
                    android:background="@drawable/sign_header_avatar_image"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="@dimen/dp_88"
                        android:layout_height="@dimen/dp_88"
                        android:gravity="center"
                        android:background="@mipmap/personal_image">

                        <ImageView
                            android:id="@+id/sign_avatar"
                            android:layout_width="@dimen/dp_78"
                            android:layout_height="@dimen/dp_78"
                            android:scaleType="center"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginRight="@dimen/dp_3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/sign_score_layout_one"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_13"
                            android:background="@drawable/sign_progress_score_background_up"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/sign_score_text_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_11"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                android:textColor="@color/white"
                                tools:text="+5"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/sign_score_layout_two"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_13"
                            android:background="@drawable/sign_progress_score_background_up"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/sign_score_text_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_11"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                android:textColor="@color/white"
                                tools:text="+5"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/sign_score_layout_three"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_13"
                            android:background="@drawable/sign_progress_score_background_up"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/sign_score_text_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_11"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                android:textColor="@color/white"
                                tools:text="+5"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/sign_score_layout_four"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_13"
                            android:background="@drawable/sign_progress_score_background_up"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/sign_score_text_four"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_11"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                android:textColor="@color/white"
                                tools:text="+5"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/sign_score_layout_five"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_13"
                            android:background="@drawable/sign_progress_score_background_up"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/sign_score_text_five"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_11"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                android:textColor="@color/white"
                                tools:text="+5"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
