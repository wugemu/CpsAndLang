<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f6f6f6"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        >

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_21"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/super_sort_back" />

        </LinearLayout>

        <TextView
            android:id="@+id/mTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="超级分类"
            android:textColor="#313131"
            android:textSize="@dimen/sp_18"
            android:visibility="gone"
             />
        <LinearLayout
            android:id="@+id/fragment_one_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_87"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/supersort_search_background"
            android:gravity="left|center_vertical">

            <ImageView
                android:id="@+id/search_icon_img"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:layout_marginStart="@dimen/dp_10"
                android:src="@mipmap/onefragment_search_icon_black"
                />

            <TextView
                android:id="@+id/search_icon_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="搜索商品名或黏贴宝贝标题"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        />

</LinearLayout>
