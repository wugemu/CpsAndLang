<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <View
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_22"
                android:layout_margin="@dimen/dp_9"
                android:scaleType="centerCrop"
                android:src="@mipmap/vedio_back" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:singleLine="true"
            android:maxLength="12"
            android:text="视频教程"
            android:textColor="#313131"
            android:textSize="@dimen/sp_18"
            tools:ignore="HardcodedText" />
        <ImageView
            android:id="@+id/video_save"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@mipmap/download"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.lxkj.dmhw.defined.JzvdStdShowShareButtonAfterFullscreen
        android:id="@+id/video_player300"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_55"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        >
      <LinearLayout
          android:id="@+id/catelog_layout"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="center_vertical"
          android:paddingStart="@dimen/dp_10"
          android:paddingEnd="@dimen/dp_10"
          android:layout_marginStart="@dimen/dp_25"
          >
       <ImageView
           android:id="@+id/catelog_iv"
           android:layout_width="@dimen/dp_20"
           android:layout_height="@dimen/dp_20"
           android:src="@mipmap/article_list"
           android:layout_gravity="center_horizontal"
           />
          <TextView
              android:id="@+id/catelog"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="目录"
              android:textColor="#999999"
              android:textSize="@dimen/sp_12"
              android:layout_gravity="center_horizontal"
              tools:ignore="HardcodedText" />
          
      </LinearLayout>
        <LinearLayout
            android:id="@+id/like_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:id="@+id/cc_like_img"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/cc_like"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/cc_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                android:layout_gravity="center_horizontal"
                tools:ignore="HardcodedText" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/share_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_alignParentEnd="true"
             android:layout_marginEnd="@dimen/dp_25"
            >
            <ImageView
                android:id="@+id/share_iv"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/cc_share"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/cc_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                android:layout_gravity="center_horizontal"
                tools:ignore="HardcodedText" />

        </LinearLayout>
        
    </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
