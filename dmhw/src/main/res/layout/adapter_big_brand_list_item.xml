<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/adapter_new_onelist_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
       <com.lxkj.dmhw.view.ScaleLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:widthToHeight="1.0"
           >
        <ImageView
            android:id="@+id/adapter_new_one_fragment_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/rounded_default_bg"/>

        <ImageView
            android:id="@+id/adapter_new_one_fragment_video"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_59"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:src="@mipmap/commodity_video"/>
       </com.lxkj.dmhw.view.ScaleLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_13"
                >
            <TextView
                android:id="@+id/adapter_new_one_fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_marginStart="@dimen/dp_5"
                android:lines="1"
                android:ellipsize="end"
                tools:text="测试测试测试测试测试测试测试测试测试测试"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/layout_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="券后  "
                        android:textColor="@color/mainColor"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="@color/mainColor"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/adapter_new_one_fragment_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textColor="@color/mainColor"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        tools:text="29.0" />



                </LinearLayout>
            </RelativeLayout>





        </LinearLayout>

    </LinearLayout>
</LinearLayout>