<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f6f6f6"
    android:id="@+id/parent_layout"
    >

    <RelativeLayout
        android:id="@+id/adapter_classification_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/super_sort_item_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/adapter_classification_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="#666666"
                tools:text="推荐专区"/>

        </LinearLayout>

        <View
            android:id="@+id/adapter_classification_left"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_13"
            android:layout_centerVertical="true"
            android:background="@drawable/super_sort_split_bg"/>

    </RelativeLayout>

</LinearLayout>