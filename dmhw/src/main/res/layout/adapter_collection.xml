<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
     >

    <LinearLayout
        android:id="@+id/location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/adapter_collection_checkbox_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:gravity="center">

            <com.lxkj.dmhw.defined.SmoothCheckBox
                android:id="@+id/adapter_collection_checkbox"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/adapter_collection_image"
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_96"
                android:scaleType="centerCrop"
                android:background="@mipmap/default_for_pic"/>

            <LinearLayout
                android:id="@+id/adapter_collection_tips"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_66"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/limit_backround"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:text="已下架"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textSize="@dimen/sp_7"
                    android:textColor="@color/white"
                    android:text="had withdrawn"
                    tools:ignore="HardcodedText,SmallSp" />

            </LinearLayout>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/adapter_collection_check"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:src="@mipmap/taobao_icon"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/adapter_collection_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="#333333"
                android:layout_marginStart="@dimen/dp_3"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:ellipsize="end"
                tools:text="测试测试测试测试测试测试测试测试测试测试"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_3"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/adapter_collection_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    android:layout_gravity="center_vertical"
                    tools:text="1000"/>
                <TextView
                    android:id="@+id/adapter_collection_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:lines="1"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    tools:text="某某店铺"
                    tools:ignore="SmallSp"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_alignParentBottom="true"
                     >
                <LinearLayout
                    android:id="@+id/layout_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_above="@+id/layout_02"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/layout_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/quanhou11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¥"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_13"
                                tools:ignore="HardcodedText" />


                            <TextView
                                android:id="@+id/adapter_collection_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_18"
                                tools:text="29.0" />


                            <TextView
                                android:id="@+id/adapter_collection_original_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_11"
                                android:textColor="#999999"
                                android:layout_toRightOf="@+id/layout_03"
                                android:layout_alignBaseline="@+id/layout_03"
                                android:layout_marginLeft="@dimen/dp_10"
                                tools:text="原价 56"
                                android:visibility="gone"
                                />

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    tools:ignore="RtlHardcoded">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/adapter_new_one_fragment_discount_layout"
                                android:layout_width="@dimen/dp_57"
                                android:layout_height="@dimen/dp_17"
                                android:background="@mipmap/coponbg"
                                android:layout_gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/adapter_collection_discount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/dp_17"
                                    android:minWidth="@dimen/dp_40"
                                    android:gravity="center"
                                    android:layout_marginStart="@dimen/dp_17"
                                    android:paddingEnd="@dimen/dp_6"
                                    android:paddingStart="@dimen/dp_5"
                                    android:textSize="@dimen/sp_10"
                                    android:textColor="#FFFFFF"
                                    tools:text="100元"/>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/adapter_new_one_fragment_estimate"
                                android:layout_width="@dimen/dp_57"
                                android:layout_height="@dimen/dp_17"
                                android:layout_marginStart="@dimen/dp_5"
                                android:background="@drawable/bg_rect_strock_black_2dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >

                                <TextView
                                    android:id="@+id/adapter_collection_estimate_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/sp_10"
                                    tools:text="奖 2元" />

                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/noeffect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_12"
                            android:paddingEnd="@dimen/dp_6"
                            android:paddingStart="@dimen/dp_6"
                            android:paddingTop="@dimen/dp_1"
                            android:paddingBottom="@dimen/dp_1"
                            android:textColor="@color/white"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/order_status_background_style_gray"
                            android:text="已失效"
                            android:visibility="gone"
                            />
                    </RelativeLayout>


                </LinearLayout>
                 </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/adapter_collection_overdue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_alignTop="@+id/location_layout"
        android:layout_alignBottom="@+id/location_layout"
        android:visibility="gone"
        android:background="#00000000"/>

</RelativeLayout>