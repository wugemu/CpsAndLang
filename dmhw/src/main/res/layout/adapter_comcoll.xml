<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f4f4f4"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/personal_grid_bg"
        >
    <LinearLayout
        android:id="@+id/adapter_new_one_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_93">

            <ImageView
                android:id="@+id/adapter_parttwo_image"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_93"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_for_pic"/>

            <ImageView
                android:id="@+id/adapter_new_one_fragment_video"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_59"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:src="@mipmap/commodity_video"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/adapter_parttwo_check"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_3"
                tools:src="@mipmap/shop_list_taobao"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/adapter_parttwo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:lines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dp_5"
                tools:text="       测试测试测试测试测试测试测试测试测试测试"/>
            </RelativeLayout>

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentBottom="true"
                    >
                    <TextView
                        android:id="@+id/adapter_parttwo_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="#FCB12E"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        tools:text="1000人已学习"/>

                    <TextView
                        android:id="@+id/adapter_parttwo_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="#814E2A"
                        android:background="@drawable/select_four_bg"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:paddingStart="@dimen/dp_8"
                        android:paddingEnd="@dimen/dp_8"
                        android:text="新手教程"
                        tools:ignore="HardcodedText,SmallSp"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>

        </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>