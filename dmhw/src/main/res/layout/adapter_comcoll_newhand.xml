<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f4f4f4"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        android:background="@drawable/personal_grid_bg"
        >
    <LinearLayout
        android:id="@+id/adapter_new_one_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_93">

            <ImageView
                android:id="@+id/adapter_parttwo_image"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_93"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_for_pic"/>

            <ImageView
                android:id="@+id/adapter_new_one_fragment_video"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_59"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:src="@mipmap/commodity_video"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/adapter_parttwo_check"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_3"
                tools:src="@mipmap/shop_list_taobao"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/adapter_parttwo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:lines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dp_5"
                tools:text="        测试测试测试测试测试测试测试测试测试测试"/>
            </RelativeLayout>

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentBottom="true"
                    >
                    <TextView
                        android:id="@+id/adapter_parttwo_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="#FCB12E"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        tools:text="1000人已学习"/>

                    <LinearLayout
                        android:id="@+id/list_share_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        >
                        <ImageView
                            android:id="@+id/adapter_parttwo_share"
                            android:layout_width="@dimen/dp_11"
                            android:layout_height="@dimen/dp_11"
                            android:src="@mipmap/cc_share"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:id="@+id/adapter_share_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:textSize="@dimen/sp_11"
                            android:textColor="#999999"
                            android:layout_gravity="center_vertical"
                            tools:text="1000"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/adapter_parttwo_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="#F84B43"
                        android:background="@drawable/select_four_bg"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:paddingStart="@dimen/dp_8"
                        android:paddingEnd="@dimen/dp_8"
                        android:text="新手教程"
                        tools:ignore="HardcodedText,SmallSp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>

        </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


     <LinearLayout
         android:id="@+id/adapter_parttwo_question_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/dp_10"
         android:orientation="vertical"
         >

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <RelativeLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
             <ImageView
                 android:id="@+id/adapter_parttwo_quesimg"
                 android:layout_width="@dimen/dp_18"
                 android:layout_height="@dimen/dp_18"
                 android:layout_marginTop="@dimen/dp_3"
                 tools:src="@mipmap/ques_icon"
                 android:scaleType="fitXY"/>
                 <TextView
                     android:id="@+id/adapter_parttwo_itemnum"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/sp_9"
                     android:textColor="@color/white"
                     android:layout_centerInParent="true"
                     android:layout_marginStart="@dimen/dp_1"
                     tools:text="Q19"
                     />
             </RelativeLayout>
             <TextView
                 android:id="@+id/adapter_parttwo_questitle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/sp_14"
                 android:textColor="#333333"
                 android:lines="1"
                 android:ellipsize="end"
                 android:lineSpacingExtra="@dimen/dp_5"
                 tools:text="         测试测试测试测试测试测试测试测试测试测试"
                 android:layout_marginEnd="@dimen/dp_60"
                 />

             <ImageView
                 android:layout_width="@dimen/dp_6"
                 android:layout_height="@dimen/dp_11"
                 android:src="@mipmap/comcoll_arrow"
                 android:scaleType="fitXY"
                 android:layout_alignParentEnd="true"
                 android:layout_centerVertical="true"
                 />

         </RelativeLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/dp_8"
           android:layout_marginStart="@dimen/dp_24"
           >
           <TextView
               android:id="@+id/adapter_parttwo_questime"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/sp_11"
               android:textColor="#999999"
               android:layout_gravity="center_vertical"
               tools:text="2020-01-25"/>
           <TextView
               android:id="@+id/adapter_parttwo_quesnumber"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/sp_11"
               android:textColor="#FCB12E"
               android:layout_gravity="center_vertical"
               android:layout_marginStart="@dimen/dp_10"
               tools:text="1000人已学习"/>

       </LinearLayout>

     </LinearLayout>



    </LinearLayout>

</LinearLayout>