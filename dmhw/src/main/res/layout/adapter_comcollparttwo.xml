<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/dp_136"
    android:layout_height="wrap_content"
    android:id="@+id/adapter_parttwo_layout"
    >
        <ImageView
            android:id="@+id/adapter_parttwo_image"
            android:layout_width="@dimen/dp_136"
            android:layout_height="@dimen/dp_97"
            android:scaleType="centerCrop"
            android:src="@mipmap/rounded_default_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_14"
        android:background="@drawable/personal_grid_bg01"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_5"
        >
        <ImageView
            android:id="@+id/adapter_parttwo_check"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_3"
            tools:src="@mipmap/shop_list_taobao"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/adapter_parttwo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:lines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_5"
            tools:text="       测试测试测试测试测试测试测试测试测试测试"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/adapter_parttwo_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_11"
        android:textColor="#FCB12E"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_10"
        tools:text="1000人已学习"/>
    </LinearLayout>
</LinearLayout>