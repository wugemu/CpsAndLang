<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/adapter_commodity_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.lxkj.dmhw.view.ScaleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:widthToHeight="1.0"
            >

            <ImageView
                android:id="@+id/adapter_commodity_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/default_for_pic"
                android:scaleType="centerCrop"/>


        </com.lxkj.dmhw.view.ScaleLayout>
        <TextView
            android:id="@+id/adapter_commodity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="0.9"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/sp_11"
            android:textColor="#333333"
            tools:text="测试测试测试测试测试"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="bottom">

            <TextView
                android:id="@+id/quan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/black"
                android:text="@string/money"/>

            <TextView
                android:id="@+id/adapter_commodity_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/black"
                tools:text="3.8"/>

            <TextView
                android:id="@+id/quanhou_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                android:textSize="@dimen/sp_10"
                android:textColor="#000000"
                android:text="券后"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                android:textSize="@dimen/sp_9"
                android:textColor="#999999"
                android:text="@string/money"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/adapter_commodity_yuanjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                android:textSize="@dimen/sp_9"
                android:textColor="#999999"
                android:visibility="gone"
                tools:text="68"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal"
            android:gravity="bottom">

            <LinearLayout
                android:id="@+id/hhh"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_17"
                android:layout_weight="1"
                android:background="@mipmap/detail_coupon"
                android:layout_marginEnd="@dimen/dp_2"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/adapter_collection_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_9"
                        android:textColor="@color/white"
                        tools:text="29"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/white"
                        android:text="元"
                        tools:ignore="HardcodedText"
                        android:visibility="gone"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/adapter_collection_estimate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_17"
                android:layout_weight="1"
                android:paddingStart="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/bg_rect_strock_black_2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_9"
                    android:textColor="@color/black"
                    android:text="奖"
                    tools:ignore="HardcodedText,SmallSp" />

                <TextView
                    android:id="@+id/adapter_collection_estimate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_9"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_2"
                    tools:text="299元"
                    tools:ignore="SmallSp" />

            </LinearLayout>
            <TextView
                android:id="@+id/noeffect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:paddingEnd="@dimen/dp_6"
                android:paddingStart="@dimen/dp_6"
                android:paddingTop="@dimen/dp_1"
                android:paddingBottom="@dimen/dp_1"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:background="@drawable/order_status_background_style_gray"
                android:text="已失效"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>