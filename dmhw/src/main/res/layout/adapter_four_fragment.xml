<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <View
            android:id="@+id/transparent_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="#f2f2f2"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:background="#f2f2f2"
            />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/adapter_four_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/adapter_four_item_bg"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_5"
        android:paddingTop="@dimen/dp_10"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/adapter_item_list_imgbg"
            >

            <ImageView
                android:id="@+id/adapter_four_fragment_image"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/goodsbg"
                android:scaleType="centerCrop" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/adapter_four_fragment_check"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:scaleType="fitXY"
                    android:src="@mipmap/shop_list_tmall" />

                <TextView
                    android:id="@+id/adapter_four_fragment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:layout_marginStart="@dimen/dp_4"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_13"
                    android:textColor="#333333"
                    tools:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                >
                <LinearLayout
                    android:id="@+id/layout_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/money"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/adapter_four_fragment_moneys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_21"
                        tools:text="29" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_16"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@mipmap/coponbg"
                        >
                        <TextView
                            android:id="@+id/adapter_four_fragment_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="@dimen/dp_22"
                            tools:text="29元"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/adapter_four_fragment_estimate_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_jiang_black"
                        android:layout_gravity="center_vertical"
                        >
                        <TextView
                            android:id="@+id/adapter_four_fragment_estimate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#000000"
                            android:layout_centerHorizontal="true"
                            tools:text="奖299元"
                            tools:ignore="SmallSp" />

                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                >


                <TextView
                   android:id="@+id/adapter_four_fragment_number_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:text="爆卖 6666 件"
                    android:textColor="#814E2A"
                    android:textSize="@dimen/sp_11"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_25"
                    android:background="@drawable/bg_rect_gold_10dp"
                    />


                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/icon1"
                    android:layout_width="@dimen/dp_11"
                    android:layout_height="@dimen/dp_13"
                    android:scaleType="fitXY"
                    android:src="@mipmap/adapter_four_fragment_iconone"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/cart_tv"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:text="马上抢"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    android:background="@drawable/bg_rect_black_20dp"
                    android:layout_alignParentRight="true"
                    />



            </RelativeLayout>



        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#f2f2f2"
        android:layout_below="@+id/adapter_four_fragment_layout"
        />
    </RelativeLayout>
    <ImageView
        android:id="@+id/adapter_four_fragment_ranking"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:scaleType="centerCrop"
        android:src="@mipmap/four_fragment_one"/>
</RelativeLayout>