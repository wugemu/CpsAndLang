<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/header_fragment_one_new_brand_shopping"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lable_sort_iv"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:scaleType="centerCrop"
            android:src="@mipmap/header_fragment_one_new_brand_shopping" />

        <TextView
            android:id="@+id/lable_sort_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_main_tab_htn"
            android:text="精选"
            android:layout_gravity="center_horizontal"
            android:textColor="#666"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>