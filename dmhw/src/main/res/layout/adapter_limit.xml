<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_134"
        android:orientation="vertical"
        >
        <View
            android:id="@+id/transparent_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:background="@color/Transparent00000000"
            />
        <View
            android:id="@+id/transparent_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:background="#f4f4f4"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/limit_item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_134"
        android:padding="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/personal_grid_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/adapter_limit_image"
                android:layout_width="@dimen/dp_114"
                android:layout_height="@dimen/dp_114"
                android:scaleType="centerCrop"
                android:background="@mipmap/default_for_pic"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/adapter_limit_tips_layout"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_72"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/limit_backround">

                <TextView
                    android:id="@+id/adapter_limit_tips_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    android:text="即将开始"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/adapter_limit_tips_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textSize="@dimen/sp_9"
                    android:textColor="@color/white"
                    android:text="about to begin"
                    tools:ignore="HardcodedText,SmallSp" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                
                <ImageView
                    android:id="@+id/adapter_limit_check"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_3"
                    android:scaleType="fitXY"
                    tools:src="@mipmap/shop_list_tmall"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/adapter_limit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_marginStart="@dimen/dp_4"
                    android:includeFontPadding="false"
                    tools:text="测试测试测试测试测试测试测试场测试测试"/>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                   <RelativeLayout
                       android:id="@+id/adapter_limit_buy_layout"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/dp_10"
                       android:background="@drawable/adapter_brand_long_bg"
                       >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_8"
                        android:paddingEnd="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_1"
                        android:paddingTop="@dimen/dp_1"
                        android:gravity="bottom"
                        android:background="@drawable/adapter_brand_yiqiang"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/adapter_limit_buy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            android:textSize="@dimen/sp_11"
                            android:textColor="#ffffff"
                            tools:text="1000"/>


                    </LinearLayout>
                   </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_above="@+id/layout_02"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/dp_5"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/layout_03"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="券后  "
                                        android:textColor="#151D23"
                                        android:textSize="@dimen/sp_12" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/money"
                                        android:textColor="#151D23"
                                        android:textSize="@dimen/sp_12" />

                                    <TextView
                                        android:id="@+id/adapter_limit_money"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#151D23"
                                        android:textSize="@dimen/sp_18"
                                        android:textStyle="bold"
                                        tools:text="29" />


                                </LinearLayout>


                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentBottom="true"
                            tools:ignore="RtlHardcoded">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="right">

                                    <LinearLayout
                                        android:id="@+id/adapter_new_one_fragment_estimate"
                                        android:layout_width="@dimen/dp_57"
                                        android:layout_height="wrap_content"
                                        android:background="@mipmap/coponbg"
                                        android:layout_gravity="bottom"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:visibility="gone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/dp_3"
                                            android:textSize="@dimen/sp_10"
                                            android:textColor="#FF9000"
                                            android:text="券"
                                            tools:ignore="HardcodedText,SmallSp"
                                            />

                                        <TextView
                                            android:id="@+id/adapter_limit_discount"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/dp_17"
                                            android:textSize="@dimen/sp_10"
                                            android:textColor="#FFFFFF"
                                            android:gravity="center"
                                            tools:text="2元"
                                            />

                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                >


                                <LinearLayout
                                    android:id="@+id/adapter_limit_estimate_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_rect_strock_black_2dp"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/adapter_four_fragment_estimate_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingLeft="@dimen/dp_5"
                                        android:paddingRight="@dimen/dp_5"
                                        android:gravity="center_vertical"
                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:textSize="@dimen/sp_10"
                                            android:textColor="#000000"
                                            android:text="奖 "/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:textSize="@dimen/sp_10"
                                            android:textColor="#000000"
                                            android:layout_marginLeft="@dimen/dp_3"
                                            android:text="¥ "
                                            tools:ignore="HardcodedText"
                                            />
                                        <TextView
                                            android:id="@+id/adapter_limit_estimate"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:textSize="@dimen/sp_11"
                                            android:textColor="#000000"
                                            tools:text="888"/>


                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/dp_34"
                            android:layout_height="@dimen/dp_34"
                            android:background="#000000"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            >
                        <TextView
                            android:id="@+id/cart_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="抢"
                            android:textSize="@dimen/sp_20"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            android:layout_centerInParent="true"
                            />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#f4f4f4"
        android:layout_below="@+id/limit_item_layout"
        />
</RelativeLayout>