<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_width="55dp"
            android:layout_height="wrap_content">
            <com.lxkj.dmhw.view.CircleImageView
                android:id="@+id/civ_group_head1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/def_head_image"
                app:border_width="0.5dp"
                app:border_color="@color/colorWhite"
                />
            <com.lxkj.dmhw.view.CircleImageView
                android:id="@+id/civ_group_head2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/def_head_image"
                app:border_width="0.5dp"
                app:border_color="@color/colorWhite"
                android:layout_marginLeft="15dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:id="@+id/tv_group_member_names"
                android:layout_marginBottom="14dp"
                android:textSize="14sp"
                android:textColor="@color/colorBlackText"
                android:textStyle="bold"
                android:text="用户昵称、昵称2..."
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_group_need_num"
                    android:text="还差1人拼成"
                    android:textColor="@color/colorBlackText"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_item_group_deadline"
                    android:text="剩余23:53:36:01"
                    android:textSize="11sp"
                    android:textColor="@color/colorBlackText2"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            >
            <TextView

                android:gravity="center"
                android:layout_width="64dp"
                android:layout_height="26dp"
                android:id="@+id/tv_item_group_buy"
                android:background="@drawable/bg_rect_red_13dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="去拼团"
                />

            <TextView
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_group_deadline2"
                android:text="剩余23:53:36"
                android:textSize="11sp"
                android:textColor="@color/colorBlackText2"
                />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        />
</LinearLayout>