<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f4f4"
    android:paddingBottom="@dimen/sp_15"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_7"
        android:gravity="center_vertical">
        
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/news_details_time"/>

        <TextView
            android:id="@+id/adapter_news_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            tools:text="昨天"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="#DDDDDD"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/personal_grid_bg"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_news_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_13"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                tools:text="代理申请审核"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/adapter_news_details_image"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:scaleType="centerCrop"
                    tools:src="@color/gray"/>

                <TextView
                    android:id="@+id/adapter_news_details_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textSize="@dimen/sp_13"
                    android:textColor="#666666"
                    tools:text="测试测试测试测试测试测试测试测试测试测试测试测试测试"/>
                
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>