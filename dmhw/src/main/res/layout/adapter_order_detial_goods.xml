<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:id="@+id/rl_content"
    >

    <ImageView
        android:id="@+id/iv_product_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:id="@+id/ll_return_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_product_img"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_return_tip"
            android:gravity="center"
            android:layout_width="32dp"
            android:layout_height="15dp"
            android:text="返券"
            android:textColor="@color/colorRedMain"
            android:textSize="10sp"
            android:background="@drawable/bg_return_coupon"
            />
        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/help"
            />
        <TextView
            android:id="@+id/tv_return_coupon"
            android:textSize="12sp"
            android:textColor="@color/colorBlackText"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_product_img"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/iv_product_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="水库针剂强效面膜水库针剂强效面膜水库针剂强水库针剂强效面膜水库针剂强效面膜水库针剂强"
        android:textColor="@color/colorBlackText"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_name"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/iv_product_img"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="规格"
            android:textColor="@color/colorBlackText2"
            android:textSize="12sp" />

        <!--<TextView-->
            <!--android:id="@+id/tv_tax_fee"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="税费"-->
            <!--android:textColor="@color/colorBlackText2"-->
            <!--android:textSize="12sp" />-->

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="x5"
            android:textColor="@color/colorBlackText"
            android:textSize="13sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_product_img"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/iv_product_img"
        android:text="¥0.00"
        android:textColor="@color/colorBlackText"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tip"
        android:textColor="@color/red"
        android:textSize="11sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_price"
        android:layout_toRightOf="@+id/iv_product_img"
        android:layout_marginLeft="12dp"
        android:visibility="gone"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_wz_profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_price"
        android:layout_alignTop="@+id/tv_price"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_price"
        android:gravity="center_vertical"
        android:text="（已省0元）"
        android:layout_toLeftOf="@+id/btn_return"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/colorRedMain"
        android:textSize="12sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/btn_return"
        android:layout_width="69dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/iv_product_img"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_order_copy_12dp"
        android:gravity="center"
        android:text="退款驳回"
        android:textColor="@color/colorBlackText3"
        android:textSize="12sp" />

</RelativeLayout>

