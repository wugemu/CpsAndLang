<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/adapter_voucher_layout"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100">

            <ImageView
                android:id="@+id/adapter_voucher_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="@drawable/adapter_voucher_tips_background"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adapter_voucher_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:textSize="@dimen/sp_9"
                    android:textColor="@color/white"
                    tools:text="3.5万人已领 | 20元券"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/adapter_voucher_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="0.9"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/sp_11"
            android:textColor="#333333"
            tools:text="测试测试测试测试测试"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/mainColor"
                android:text="@string/money"/>

            <TextView
                android:id="@+id/adapter_voucher_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/mainColor"
                tools:text="3.8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                android:textSize="@dimen/sp_9"
                android:textColor="#999999"
                android:text="@string/money"/>

            <TextView
                android:id="@+id/adapter_voucher_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                android:textSize="@dimen/sp_9"
                android:textColor="#999999"
                tools:text="68"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>