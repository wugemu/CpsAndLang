<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/adapter_parttwo_question_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginEnd="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_30"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adapter_article_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_15"
                android:textColor="#333333"
                android:lines="1"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dp_5"
                tools:text="测试测试测试测试测试测试测试测试测试测试"
                android:layout_marginEnd="@dimen/dp_60"
                />

            <ImageView
                android:id="@+id/arraw"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_11"
                android:src="@mipmap/comcoll_arrow"
                android:scaleType="fitXY"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/video_btn"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@mipmap/comcoll_unplay"
                android:scaleType="fitXY"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            >
            <TextView
                android:id="@+id/adapter_parttwo_questime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11"
                android:textColor="#999999"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                tools:text="2020-01-25"/>
            <TextView
                android:id="@+id/adapter_parttwo_quesnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11"
                android:textColor="#999999"
                android:layout_gravity="center_vertical"
                tools:text="1000人已学习"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/adapter_parttwo_quesnumber"
                android:layout_marginStart="@dimen/dp_13"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_11"
                        android:layout_height="@dimen/dp_11"
                        android:src="@mipmap/cc_like"
                        android:layout_marginTop="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/likenum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:gravity="center"
                        android:textColor="#999"
                        android:textSize="@dimen/sp_11"
                        tools:text="1000次" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_13"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_11"
                        android:layout_height="@dimen/dp_11"
                        android:src="@mipmap/cc_share"
                        android:layout_marginTop="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/sharenum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:gravity="center"
                        android:textColor="#999"
                        android:textSize="@dimen/sp_11"
                        tools:text="1000次" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>