<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <CheckBox
            android:id="@+id/cb_checkitemall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/check_def"
            android:visibility="visible" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/cb_checkitemall"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cart_post" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_headtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="保税仓"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_coupon_get"
            android:paddingTop="@dimen/design_5dp"
            android:paddingBottom="@dimen/design_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领券"
            android:textSize="14sp"
            android:textColor="@color/colorBlackText"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:background="@color/line_color"-->
        <!--/>-->
</LinearLayout>


