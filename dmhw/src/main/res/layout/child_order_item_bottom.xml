<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <RelativeLayout
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2018-01-01"
            android:textSize="14sp"
            android:textColor="@color/colorBlackText2"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            >
            <TextView
                android:id="@+id/tv_product_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp"
                android:text="共3件"
                />
            <TextView
                android:id="@+id/tv_yf_tip"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp"
                android:text="应付总额:"
                />
            <TextView
                android:id="@+id/tv_product_sum_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRedMain"
                android:textSize="14sp"
                android:text="¥0.00"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:paddingBottom="@dimen/fab_margin"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"

        >
        <TextView
            android:visibility="visible"
            android:gravity="center"
            android:id="@+id/bt_order_left_left"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:text="删除订单"
            android:background="@drawable/bg_rect_stroke_black2_9dp"
            android:textColor="@color/colorBlackText3"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/view_toview_two"/>
        <TextView
            android:visibility="visible"
            android:gravity="center"
            android:id="@+id/bt_order_left"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:text="删除订单"
            android:background="@drawable/bg_rect_stroke_black2_9dp"
            android:textColor="@color/colorBlackText3"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/view_toview_two"/>
        <TextView
            android:visibility="visible"
            android:gravity="center"
            android:id="@+id/bt_order_right"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:text="确认收货"
            android:background="@drawable/bg_rect_red_25dp"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/view_toview_two"/>

        <TextView
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/bt_order_group_share"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/bg_rect_red_25dp"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/view_toview_two"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorBackGroud"
        />
</LinearLayout>