<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGroud">

    <com.lxkj.dmhw.widget.swipe.SwipeListView
        android:overScrollMode="never"
        android:layout_above="@+id/ll_tip"
        android:id="@+id/lv_carts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_tip"
        android:layout_above="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:background="#FFF8DC"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cart_notice"
            />
        <TextView
            android:layout_marginLeft="4dp"
            android:textColor="#A1997A"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际结算金额以最终提交订单金额为准"
            />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        >

        <LinearLayout
            android:id="@+id/ll_check_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_check_all"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/check_def" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全选"
                android:layout_marginLeft="8dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/ll_cart_info"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/design_10dp"
            android:gravity="right"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlackText"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/colorBlackText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(含税)"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/colorBlackText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/tv_sum_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorRedMain"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_tax_fee"
                    android:textSize="10sp"
                    android:textColor="@color/colorBlackText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="税费预计"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/design_5dp"
                    android:id="@+id/tv_discount_fee"
                    android:textSize="10sp"
                    android:textColor="@color/colorRedMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动已减:¥0"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_settlement"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_gradient"
            android:gravity="center"
            android:text="结算(1)"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
        <TextView
            android:visibility="visible"
            android:id="@+id/tv_delete_all"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_gradient"
            android:gravity="center"
            android:text="删除所选"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </LinearLayout>
    <include
        layout="@layout/lang_common_nodata"/>
</RelativeLayout>