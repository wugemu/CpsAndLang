<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lxkj.dmhw.activity.self.PayTypeActivity"
    tools:showIn="@layout/activity_pay_type"
    android:background="@color/colorBackGroud">
    <ScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                >
                <TextView
                    android:text="订单提交成功，请您尽快支付！"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingTop="20dp"
                    android:textColor="@color/colorBlackText"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">
                    <TextView
                        android:text="请您在"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/colorBlackText2"
                        />
                    <TextView
                        android:id="@+id/tv_time"
                        android:text="30:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/colorRedMain"
                        />
                    <TextView
                        android:text="内完成付款，否则订单会自动取消！"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/colorBlackText2"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付金额："
                        android:textSize="15sp"
                        android:layout_marginRight="4dp"
                        android:textColor="@color/colorBlackText"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_price"
                        android:textSize="30sp"
                        android:text="¥0.00"
                        android:textColor="@color/colorRedMain"
                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorBackGroud"
                />
            <ListView
                android:id="@+id/lv_paytype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/line_color"
                android:dividerHeight="0.5dp"
                android:paddingLeft="20dp"
                android:background="@color/colorWhite"/>
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginTop="20dp"
                android:id="@+id/btn_ok"
                android:layout_width="290dp"
                android:layout_height="49dp"
                android:text="立即支付"
                android:background="@drawable/bg_rect_new"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>
    <include layout="@layout/lang_common_loading"/>

</RelativeLayout>