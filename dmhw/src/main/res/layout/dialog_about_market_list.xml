<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/dialogTransparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/free_list_layout"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/top_gradient_bg"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            >
            <ImageView
                android:id="@+id/room_back_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/room_close"
               android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"
                />
        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"

            >
            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择以下应用商店进行评价"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_15"
                />

         </LinearLayout>



        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_room_free_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="#00000000"
            />

    </RelativeLayout>
    </LinearLayout>


</RelativeLayout>