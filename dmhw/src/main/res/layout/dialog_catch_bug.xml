<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/black">


        <LinearLayout
            android:layout_width="@dimen/dp_225"
            android:layout_height="@dimen/dp_253"
            android:orientation="vertical"
            android:background="@drawable/sign_bg_style"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/give_bi_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:textColor="#F3790A"
                android:text="奖励50个"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    <ImageView
        android:id="@+id/dialog_sign_clean"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_39"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/close_adv"/>
</LinearLayout>