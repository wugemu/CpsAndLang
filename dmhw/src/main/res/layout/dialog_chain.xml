<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyaout000"
    android:orientation="vertical"
    android:background="@color/dialogTransparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.lxkj.dmhw.view.ScaleLayout
        android:id="@+id/lyaout_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_35"
        android:layout_centerInParent="true"
        android:background="@mipmap/dialog_chain_bg"
        app:widthToHeight="0.94"
        >
    <LinearLayout
        android:id="@+id/lyaout001"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_106"
       >
        <LinearLayout
            android:id="@+id/location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_22"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/dp_83"
                    android:layout_height="@dimen/dp_83"
                    android:scaleType="centerCrop"
                    android:background="@mipmap/default_for_pic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/bijia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:textColor="#FFD6B4"
                        android:text="比价"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_2"
                        android:background="@drawable/bijia_bg"
                        android:paddingStart="@dimen/dp_3"
                        android:paddingEnd="@dimen/dp_3"
                        android:paddingBottom="@dimen/dp_0_5"
                        android:paddingTop="@dimen/dp_0_5"
                        android:layout_marginEnd="@dimen/dp_3"
                        />
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="#333333"
                        android:lines="2"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/dp_2"
                        tools:text="         测试测试测试测试测试测试测试测试测试测试"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_alignParentBottom="true"
                        >
                        <LinearLayout
                            android:id="@+id/layout_02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            tools:ignore="RtlHardcoded">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <LinearLayout
                                    android:id="@+id/hhh"
                                    android:layout_width="@dimen/dp_57"
                                    android:layout_height="@dimen/dp_17"
                                    android:background="@mipmap/coponbg"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dp_15"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/discount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/sp_10"
                                            android:textColor="@color/white"
                                            tools:text="29"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="bottom"
                                            android:textSize="@dimen/sp_10"
                                            android:textColor="@color/white"
                                            android:text="元"
                                            tools:ignore="HardcodedText"
                                            android:visibility="gone"
                                            />

                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/adapter_collection_estimate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/dp_17"
                                    android:paddingStart="@dimen/dp_8"
                                    android:paddingEnd="@dimen/dp_8"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@+id/hhh"
                                    android:background="@drawable/bg_rect_strock_black_2dp"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/estimate_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_11"
                                        android:textColor="#333333"
                                        android:layout_gravity="center_vertical"
                                        tools:text="299元"
                                        tools:ignore="SmallSp" />

                                </LinearLayout>
                                <TextView
                                    android:id="@+id/noeffect"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_12"
                                    android:paddingEnd="@dimen/dp_6"
                                    android:paddingStart="@dimen/dp_6"
                                    android:paddingTop="@dimen/dp_1"
                                    android:paddingBottom="@dimen/dp_1"
                                    android:textColor="@color/white"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/order_status_background_style_gray"
                                    android:text="已失效"
                                    android:visibility="gone"
                                    />
                            </RelativeLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layout_01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentBottom="true"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/layout_03"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/quanhou11"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:text="券后  "
                                        android:textColor="#333333"
                                        android:textSize="@dimen/sp_12"
                                        tools:ignore="HardcodedText" />

                                    <TextView
                                        android:id="@+id/quanhou12"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:text="¥"
                                        android:textColor="#333333"
                                        android:textSize="@dimen/sp_11" />

                                    <TextView
                                        android:id="@+id/price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:textColor="#333333"
                                        android:textSize="@dimen/sp_18"
                                        android:textStyle="bold"
                                        tools:text="29.0" />


                                    <TextView
                                        android:id="@+id/adapter_collection_original_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_11"
                                        android:textColor="#999999"
                                        android:layout_toRightOf="@+id/layout_03"
                                        android:layout_alignBaseline="@+id/layout_03"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        tools:text="原价 56"
                                        android:visibility="gone"
                                        />

                                </LinearLayout>


                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_22"
            >

            <LinearLayout
                android:id="@+id/detail_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/dp_9"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_rect_strock_black_20dp">

                <TextView
                    android:id="@+id/detail_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textSize="@dimen/sp_15"
                    android:textColor="#333333"
                    android:text="查看商品"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/get_buy_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dp_9"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_rect_black_20dp">

                <TextView
                    android:id="@+id/discount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/sp_15"
                    android:textColor="#FFFFFF"
                    android:text="立即购买"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    </com.lxkj.dmhw.view.ScaleLayout>
    <LinearLayout
        android:id="@+id/close_txt_layout"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
       android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/lyaout_scale"
       android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/close_new"
            />
    </LinearLayout>
</RelativeLayout>