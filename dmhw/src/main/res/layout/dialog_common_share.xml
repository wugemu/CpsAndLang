<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >

    <TextView
        android:layout_marginTop="16dp"
        android:text="至少赚¥0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_profit"
        android:textSize="18sp"
        android:textColor="@color/colorRedMain"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_below="@+id/iv_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">
        <TextView
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:visibility="gone"
            android:layout_marginBottom="18dp"
            android:text="只要你的朋友通过的你链接购买此商品，你就能赚到至少4.49元的利润"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/colorBlackText2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/tv_profit_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_tip_list"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ListView
                android:id="@+id/lv_tip_list"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:divider="@color/colorWhite"
                android:dividerHeight="@dimen/design_10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_grey"
                android:layout_marginBottom="@dimen/design_20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="14dp"
            android:paddingLeft="14dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:id="@+id/ll_share_wx"
                android:orientation="vertical"
                android:gravity="center"

                >
                <ImageView
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:adjustViewBounds="true"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@mipmap/wx" />
                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4f4f4f"
                    android:padding="4dp"
                    android:text="微信" />
            </LinearLayout>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:id="@+id/ll_share_wxcircle"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:adjustViewBounds="true"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@mipmap/wx_circle"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4f4f4f"
                    android:padding="4dp"
                    android:text="朋友圈"
                    />
            </LinearLayout>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/ll_share_qq"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:adjustViewBounds="true"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@mipmap/qq"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4f4f4f"
                    android:padding="4dp"
                    android:text="QQ"
                    />
            </LinearLayout>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:id="@+id/ll_share_qzone"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:adjustViewBounds="true"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@mipmap/qqzone"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4f4f4f"
                    android:padding="4dp"
                    android:text="QQ空间"
                    />
            </LinearLayout>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/ll_share_sina2"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:adjustViewBounds="true"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4f4f4f"
                    android:padding="4dp"
                    android:text="微博"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_share_bottom2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingRight="14dp"
            android:paddingLeft="14dp">
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/ll_share_sina"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:adjustViewBounds="true"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4f4f4f"
                    android:padding="4dp"
                    android:text="微博"
                    />
            </LinearLayout>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:id="@+id/ll_copy_link"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:adjustViewBounds="true"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4f4f4f"
                    android:padding="4dp"
                    android:text="复制链接"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_qrcode"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:adjustViewBounds="true"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    />
                <TextView
                    android:id="@+id/tv_qrname"
                    android:layout_marginTop="3dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4f4f4f"
                    android:padding="4dp"
                    android:text="分享海报"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_downsc"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:adjustViewBounds="true"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4f4f4f"
                    android:padding="4dp"
                    android:text="一键发圈"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_margin="16dp"
        android:padding="2dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/share_close"
        android:layout_width="25dp"
        android:scaleType="fitCenter"
        android:layout_height="25dp" />
</RelativeLayout>