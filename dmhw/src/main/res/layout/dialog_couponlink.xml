<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    tools:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/white_background_style">

        <ImageView
            android:id="@+id/dialog_name_setting_close"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_marginTop="@dimen/dp_23"
            android:src="@mipmap/lighter"/>

        <TextView
            android:id="@+id/title_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_15"
            tools:text="红包使用小提示"
            tools:ignore="HardcodedText"
            />
           <LinearLayout
               android:id="@+id/content_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/dp_20"
               android:layout_marginEnd="@dimen/dp_20"
               android:layout_marginTop="@dimen/dp_20"
               android:orientation="vertical"
               >

           </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_34"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/dialog_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/key_cancel_btn_style">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:textColor="#FF275C"
                    android:text="不再打扰"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/key_confirm_btn_style">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/white"
                    android:text="我知道了"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>