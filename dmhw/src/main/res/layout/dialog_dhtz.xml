<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="设置到货通知"
        android:textColor="@color/colorBlackText"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:gravity="center"
        android:text="若该商品到货，我们会第一时间通知您！"
        android:textColor="@color/colorBlackText"
        android:textSize="15sp" />

    <com.example.test.andlang.widget.editview.CleanableEditText
        android:inputType="phone"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:drawableRight="@mipmap/delete"
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textSize="15sp"
        android:textColor="@color/colorBlackText"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/bg_dhtz_edit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/dialog_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:text="取消"
                android:textColor="@color/colorBlackText" />
        </LinearLayout>


        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/dialog_ok_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_right_btn_bg"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:text="确定"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>