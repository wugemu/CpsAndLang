<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_332">

        <LinearLayout
            android:layout_width="@dimen/dp_257"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/sign_bg_style"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_50">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#666666"
                        android:text="点击NN俱乐部的消息推送就有NN币送哦"
                        tools:ignore="HardcodedText" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_214"
                android:layout_height="@dimen/dp_173"
                android:background="@mipmap/getui_task_topimg"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/getui_task_img"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

        </LinearLayout>
       <RelativeLayout
           android:layout_width="@dimen/dp_86"
           android:layout_height="@dimen/dp_75"
           android:background="@mipmap/getui_task_topimg"
           android:layout_centerHorizontal="true"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/sp_15"
               android:textColor="#FFFFFF"
               android:text="消息推送"
               android:layout_centerInParent="true"
               tools:ignore="HardcodedText" />
       </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/dialog_sign_clean"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_39"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/close_adv"/>
</LinearLayout>