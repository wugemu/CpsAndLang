<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    tools:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dp_302"
        android:layout_height="@dimen/dp_192"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingTop="@dimen/dp_11"
        android:paddingBottom="@dimen/dp_15"
        android:background="@drawable/white_background_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/dialog_name_setting_close"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_marginEnd="@dimen/dp_3"
                android:src="@mipmap/search_close"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/mainColor"
            android:text="昵称设置"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:background="#f6f6f6"/>

        <EditText
            android:id="@+id/dialog_name_setting_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_33"
            android:singleLine="true"
            android:background="@drawable/dialog_name_setting_edit"
            android:lines="1"
            android:maxLength="16"
            android:paddingStart="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_14"
            android:textSize="@dimen/sp_13"
            android:textColor="#666666"
            android:textColorHint="#999999"
            android:hint="请输入新的昵称"
            tools:ignore="HardcodedText"
            android:textCursorDrawable="@drawable/my_cursor"
            android:cursorVisible="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:text="4-16个字符，可由中英文、数字、“_”组成"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal">

            <LinearLayout
                android:id="@+id/dialog_name_setting_confirm"
                android:layout_width="@dimen/dp_97"
                android:layout_height="@dimen/dp_29"
                android:gravity="center"
                android:background="@drawable/login_btn_style">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:text="确定"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>