<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Transparent00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/free_dwondialog_layout">
  <RelativeLayout
      android:layout_width="@dimen/dp_205"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/start_bottom_iv2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_download_top"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130"
            android:background="@drawable/room_download_white_bg"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >
             <TextView
                android:id="@+id/title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载素材需要耗费流量"
                android:textColor="#333333"
                 android:layout_gravity="center_horizontal"
                android:textSize="@dimen/sp_15"

                />
                <LinearLayout
                    android:id="@+id/download_num_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    >
                    <TextView
                        android:id="@+id/title6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="总数：10"
                        android:textColor="#333333"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/sp_15"
                        />
                    <TextView
                        android:id="@+id/title7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="已下载：1"
                        android:textColor="#333333"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/sp_15"
                        />
                </LinearLayout>
            <Button
                android:id="@+id/room_download_btn"
                android:layout_width="@dimen/dp_165"
                android:layout_height="@dimen/dp_35"
                android:text="立即下载"
                android:textColor="#A45027"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/room_dialog_buy_btn_bg"
                />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
      <ImageView
          android:id="@+id/download_back_iv"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:src="@mipmap/room_close"
          android:layout_alignParentRight="true"
          android:layout_marginRight="@dimen/dp_10"
          android:layout_marginTop="@dimen/dp_10"
          />
</RelativeLayout>
</RelativeLayout>