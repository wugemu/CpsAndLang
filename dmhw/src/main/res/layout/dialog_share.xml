<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:background="@color/Transparent00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:background="@drawable/white_background_style"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:textSize="@dimen/sp_13"
                android:textColor="#333333"
                android:text="设置分享文案形式"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_13"
                android:textColor="#666666"
                android:text="短链接｜淘口令｜仅文案"
                tools:ignore="HardcodedText" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_25">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#f2f2f2"/>

                <LinearLayout
                    android:id="@+id/dialog_countersign_only"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_54"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_20"
                        android:textColor="#197bff"
                        android:text="仅淘口令"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#f2f2f2"/>

                <LinearLayout
                    android:id="@+id/dialog_countersign"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_54"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_20"
                        android:textColor="#197bff"
                        android:text="淘口令"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#f2f2f2"/>

                <LinearLayout
                    android:id="@+id/dialog_link"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_54"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_20"
                        android:textColor="#197bff"
                        android:text="短链接"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#f2f2f2"/>

                <LinearLayout
                    android:id="@+id/dialog_copywriter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_54"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_20"
                        android:textColor="#197bff"
                        android:text="仅文案"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/dialog_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:layout_marginBottom="@dimen/dp_31"
            android:gravity="center"
            android:background="@drawable/white_background_style">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:textColor="#197bff"
                android:text="取消"
                tools:ignore="HardcodedText" />
            
        </LinearLayout>

    </LinearLayout>

</LinearLayout>