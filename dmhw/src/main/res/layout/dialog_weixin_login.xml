<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/Transparent00000000"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

      <RelativeLayout
          android:id="@+id/layout_root01"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_35"
            android:background="@drawable/personal_grid_bg"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_76"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/wx_bind_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/sp_18"
                    android:textColor="#333333"
                    android:gravity="center_horizontal"
                    android:text="微信绑定"
                    tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/wx_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="手机账号注册成功，绑定微信之后即可成为会员！"
                android:layout_marginTop="@dimen/dp_15"
                android:lineSpacingExtra="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_15">
            </TextView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/wx_bing_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:gravity="center"
                android:background="@mipmap/wx_auth_btn"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_45">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/white"
                    android:text="立即绑定"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </LinearLayout>

          <ImageView
              android:layout_width="@dimen/dp_73"
              android:layout_height="@dimen/dp_73"
              android:layout_centerHorizontal="true"
              android:src="@mipmap/loginbycodeweixin"
              />

      </RelativeLayout>


</LinearLayout>