<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_21"
        android:paddingBottom="@dimen/dp_15"
        android:background="@drawable/withdrawals_dialog_background_style">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/mainColor"
            android:text="请先绑定您的支付宝账号"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:background="@drawable/withdrawals_dialog_background_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/mainColor"
                android:text="支付宝账号"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/dialog_withdrawals_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:background="@null"
                android:textSize="@dimen/sp_16"
                android:textColor="#666666"
                android:textColorHint="#60ee2532"
                android:hint="请输入支付宝账号"
                tools:ignore="HardcodedText,RtlHardcoded"
                android:textCursorDrawable="@drawable/my_cursor"
                android:cursorVisible="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:background="@drawable/withdrawals_dialog_background_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/mainColor"
                android:text="真实姓名"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/dialog_withdrawals_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:background="@null"
                android:textSize="@dimen/sp_16"
                android:textColor="#666666"
                android:textColorHint="#60ee2532"
                android:hint="请输入真实姓名"
                tools:ignore="HardcodedText,RtlHardcoded"
                android:textCursorDrawable="@drawable/my_cursor"
                android:cursorVisible="true" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/mainColor"
            android:layout_marginTop="@dimen/dp_13"
            android:text="说明：  支付宝以及姓名一经绑定将无法修改"
            tools:ignore="HardcodedText,SmallSp" />
        
        <LinearLayout
            android:id="@+id/dialog_withdrawals_btn"
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_29"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/withdrawals_dialog_btn_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:text="绑定支付宝"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>