<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorBackGroud" />
    <LinearLayout
        android:id="@+id/ll_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/orderDetialInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="商品金额：" />

        <TextView
            android:id="@+id/tv_product_price"
            style="@style/orderDetialInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00" />

        <TextView
            android:id="@+id/tv_wz_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="(已省12.00元)"
            android:textColor="@color/colorRedMain"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_activity_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/orderDetialInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="活动优惠：" />

        <TextView
            android:id="@+id/tv_activity_discount"
            style="@style/orderDetialInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_coupon_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/orderDetialInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="优惠券优惠：" />

        <TextView
            android:id="@+id/tv_coupon_discount"
            style="@style/orderDetialInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_post_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/orderDetialInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="运费：" />

        <TextView
            android:id="@+id/tv_post_fee"
            style="@style/orderDetialInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_tax_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_taxprice_tip"
            style="@style/orderDetialInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="税费" />
        <LinearLayout
            android:layout_toRightOf="@+id/tv_taxprice_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_tax_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/help" />
            <TextView
                style="@style/orderDetialInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="："/>
        </LinearLayout>
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_tax_fee"
            style="@style/orderDetialInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_total_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/orderDetialInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="订单总价：" />

        <TextView
            android:id="@+id/tv_total_fee"
            style="@style/orderDetialInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="#eeeeee" />

    <TextView
        android:visibility="visible"
        android:id="@+id/tv_pay_detial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:text="支付明细"
        android:textColor="@color/colorBlackText2"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_exchange_gift_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/orderDetialInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="兑换素店优选金额：" />

        <TextView
            android:id="@+id/tv_exchange_gift_fee"
            style="@style/orderDetialInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_withdraw_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/orderDetialInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="可用余额：" />

        <TextView
            android:id="@+id/tv_withdraw_balance"
            style="@style/orderDetialInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_must_total_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_yfze_tip"
            style="@style/orderDetialInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应付总额" />
        <LinearLayout
            android:layout_toRightOf="@+id/tv_yfze_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_yfze_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/help" />
            <TextView
                style="@style/orderDetialInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="："/>
        </LinearLayout>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_must_total_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00"
            android:textColor="@color/colorRedMain"
            android:textSize="14sp" />

        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/design_5dp"
            android:id="@+id/tv_fandian_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_yfze_tip"
            android:text="已选择仅获得返点，将不会收到该商品"
            android:textColor="@color/colorBlackText2"
            android:textSize="12sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorBackGroud" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:padding="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_order_jifen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="素店积分：获得0积分"
            android:textColor="@color/colorBlackText2"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/design_15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号：NY－19882736637383"
                android:textColor="@color/colorBlackText2"
                android:textSize="14sp" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_yuan"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_order_no"
                android:background="@drawable/yuan"
                android:gravity="center"
                android:text="慢"
                android:textColor="@color/colorRedMain"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/btn_copy_order_no"
                android:layout_width="47dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_order_copy"
                android:gravity="center"
                android:text="复制"
                android:textColor="@color/colorBlackText3"
                android:textSize="14sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_order_create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="下单时间：2017-12-18 09:23:11"
            android:textColor="@color/colorBlackText2"
            android:textSize="14sp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_logistic_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="物流公司："
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/colorBlackText2"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/design_15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_logistic_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="物流单号："
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/colorBlackText2"
                android:textSize="14sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/btn_copy_logistic_no"
                android:layout_width="47dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_order_copy"
                android:gravity="center"
                android:text="复制"
                android:textColor="@color/colorBlackText3"
                android:textSize="14sp" />
        </RelativeLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_group_complate_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="拼单成功：2017-12-18 09:23:11"
            android:textColor="@color/colorBlackText2"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorBackGroud" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_order_coupon_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackGroud"
        android:paddingLeft="@dimen/view_toview_two"
        android:paddingRight="@dimen/view_toview_two"
        android:paddingBottom="@dimen/view_toview_two">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/iv_order_coupon_share" />
    </LinearLayout>


</LinearLayout>