<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_115"
            android:layout_height="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_22"
            android:scaleType="centerCrop"
            android:src="@mipmap/fragment_apply_top_agent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_37">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="centerCrop"
                android:src="@mipmap/fragment_apply_one"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_3"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                android:textColor="#8e7a3b"
                android:text="享有自购省钱、分享赚佣金的权限"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginStart="@dimen/dp_37">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="centerCrop"
                android:src="@mipmap/fragment_apply_two"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_3"
                android:textSize="@dimen/sp_12"
                android:textColor="#8e7a3b"
                android:textStyle="bold"
                android:text="享有直属会员推广收益的20%奖励"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_17"
            android:background="#eaeaea"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fragment_apply_agent_text_background"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_13"
            android:paddingTop="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_30"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/dp_22">

                <ImageView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_23"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/apply_wechat"/>

                <EditText
                    android:id="@+id/fragment_apply_agent_wechat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_9"
                    android:background="@null"
                    android:inputType="textVisiblePassword"
                    android:digits="@string/weChat"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#666666"
                    android:textColorHint="#9b9a9a"
                    android:hint="请输入微信号"
                    tools:ignore="HardcodedText"
                    android:textCursorDrawable="@drawable/my_cursor"
                    android:cursorVisible="true" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#cc9933"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_22">

                <ImageView
                    android:layout_width="@dimen/dp_29"
                    android:layout_height="@dimen/dp_26"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/apply_name"/>

                <EditText
                    android:id="@+id/fragment_apply_agent_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_9"
                    android:background="@null"
                    android:imeOptions="actionPrevious"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#666666"
                    android:textColorHint="#9b9a9a"
                    android:hint="请填写您的真实姓名"
                    tools:ignore="HardcodedText"
                    android:textCursorDrawable="@drawable/my_cursor"
                    android:cursorVisible="true" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <LinearLayout
                android:id="@+id/fragment_apply_agent_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_100"
                android:layout_marginEnd="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:paddingTop="@dimen/dp_7"
                android:paddingBottom="@dimen/dp_7"
                android:background="@drawable/fragment_apply_btn"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_17"
                    android:textColor="#decf8e"
                    android:text="立即升级"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>