<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGroud"
    tools:context="com.lxkj.dmhw.activity.self.coupon.CouponFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/ll_coupon_exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.example.test.andlang.widget.editview.CleanableEditText
            android:id="@+id/et_exchange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.0"
            android:background="@drawable/bg_rect_new7"
            android:gravity="center_vertical"
            android:hint="输入兑换码"
            android:paddingLeft="15dp"
            android:textColor="@color/colorBlackText"
            android:textColorHint="@color/colorBlackHint"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_exchange"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_rect_red_new7"
            android:text="兑换"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />
    </LinearLayout>

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/lv_coupons"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_coupon_exchange"
        android:divider="@color/transparent"
        android:dividerHeight="5dp"
        android:overScrollMode="never"
        android:scrollbars="none" />
    <include

        layout="@layout/lang_common_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>