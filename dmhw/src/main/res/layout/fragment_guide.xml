<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guide_parent_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/guide_bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/guide_bg_one"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/guide_layout"
        >
    <com.lxkj.dmhw.view.ScaleLayout
        android:id="@+id/guide_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        attr:widthToHeight="0.271"
        >
        <ImageView
            android:id="@+id/guide_top_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:src="@mipmap/guide_top_one"/>
    </com.lxkj.dmhw.view.ScaleLayout>

    <View
        android:id="@+id/guide_split_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:visibility="gone"
        />
    </LinearLayout>
     <com.lxkj.dmhw.view.ScaleLayout
         android:id="@+id/guide_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginStart="@dimen/dp_20"
         android:layout_marginEnd="@dimen/dp_20"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="@dimen/dp_17"
         attr:widthToHeight="1.6"
         >
    <ImageView
        android:id="@+id/fragment_guide_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:src="@mipmap/guide_one"/>
     </com.lxkj.dmhw.view.ScaleLayout>


    <com.lxkj.dmhw.view.ScaleLayout
        android:id="@+id/guide_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        attr:widthToHeight="0.43"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/guide_bottom_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/guide_bottom_one"/>
    </com.lxkj.dmhw.view.ScaleLayout>


</RelativeLayout>