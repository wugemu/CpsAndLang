<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_23"
        android:paddingEnd="@dimen/dp_23"
        android:paddingTop="@dimen/dp_50"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/wechat_name_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_26"
                        android:layout_height="@dimen/dp_26"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_10"
                        android:src="@mipmap/phone"
                        />
                    <EditText
                        android:id="@+id/login_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="1234567890"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#666666"
                        android:textColorHint="#C7C6C6"
                        android:hint="请输入手机号"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        tools:ignore="HardcodedText,NestedWeights,TextFields"
                        android:textCursorDrawable="@drawable/my_cursor"
                        android:cursorVisible="true" />



                </LinearLayout>



            </LinearLayout>
            <View
                android:id="@+id/view_phone_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3F4F4"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/wechat_code_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/banding_wechat_name_unselect"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_10"
                        android:src="@mipmap/passcode_icon"
                        />
                    <EditText
                        android:id="@+id/login_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:hint="请输入密码"
                        tools:ignore="HardcodedText"
                        android:textCursorDrawable="@drawable/my_cursor"
                        android:cursorVisible="true"/>



                </LinearLayout>



            </LinearLayout>
            <View
                android:id="@+id/view_pwd_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3F4F4"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_60"
            android:background="@drawable/banding_wechat_btn_style"
            android:gravity="center">

            <TextView
                android:id="@+id/binding_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:text="登录"
                tools:ignore="HardcodedText" />

        </LinearLayout>



</LinearLayout>
</LinearLayout>