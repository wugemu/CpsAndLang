<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Transparent00000000">

    <com.lxkj.dmhw.defined.PtrClassicRefreshLayout
        android:id="@+id/load_more_ptr_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_one_new_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
           />

    </com.lxkj.dmhw.defined.PtrClassicRefreshLayout>

    <ImageView
        android:id="@+id/fragment_one_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        />
    <com.lxkj.dmhw.view.SlidingAroundFrameLayout
            android:id="@+id/sliding_adv_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_70"
            android:layout_marginEnd="@dimen/dp_8"
           >
        <LinearLayout
            android:id="@+id/sliding_adv_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/sliding_adv_close"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:src="@mipmap/sliding_adv_del"
                android:layout_marginEnd="@dimen/dp_8"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/dp_5"
                />
        <ImageView
            android:id="@+id/sliding_adv_img"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_94"
            android:src="@mipmap/transparent_logo_bg"
            android:layout_marginTop="@dimen/dp_8"
            android:scaleType="centerCrop"
            />
        </LinearLayout>
    </com.lxkj.dmhw.view.SlidingAroundFrameLayout>

    <ImageView
        android:id="@+id/return_top"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:scaleType="centerCrop"
        android:src="@mipmap/return_top"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_20"
        android:visibility="gone"
        />

</RelativeLayout>