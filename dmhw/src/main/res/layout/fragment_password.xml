<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_18"
                android:layout_margin="@dimen/dp_9"
                android:scaleType="centerCrop"
                android:src="@mipmap/btn_back_default" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="修改密码"
            android:textColor="#313131"
            android:textSize="@dimen/sp_18"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f2f2f2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:paddingLeft="@dimen/dp_19"
        android:paddingRight="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#424242"
            android:text="原始密码"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/fragment_password_original"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:singleLine="true"
            android:background="@null"
            android:inputType="textPassword"
            android:lines="1"
            android:textSize="@dimen/sp_16"
            android:textColor="#666666"
            android:hint="请输入原始密码"
            tools:ignore="HardcodedText"
            android:textCursorDrawable="@drawable/my_cursor"
            android:cursorVisible="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_15"
        android:gravity="right"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/fragment_password_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="#72737a"
            android:text="忘记密码?"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:paddingLeft="@dimen/dp_19"
        android:paddingRight="@dimen/dp_19"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#424242"
            android:text="新密码　"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/fragment_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:singleLine="true"
            android:background="@null"
            android:inputType="textPassword"
            android:lines="1"
            android:textSize="@dimen/sp_16"
            android:textColor="#666666"
            android:hint="请输入新密码"
            tools:ignore="HardcodedText"
            android:textCursorDrawable="@drawable/my_cursor"
            android:cursorVisible="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_19"
        android:background="#eaeaea"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:paddingLeft="@dimen/dp_19"
        android:paddingRight="@dimen/dp_19"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#424242"
            android:text="确认密码"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/fragment_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:singleLine="true"
            android:background="@null"
            android:inputType="textPassword"
            android:lines="1"
            android:textSize="@dimen/sp_16"
            android:textColor="#666666"
            android:hint="请确认密码"
            tools:ignore="HardcodedText"
            android:textCursorDrawable="@drawable/my_cursor"
            android:cursorVisible="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_password_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/login_btn_style">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:text="确认修改"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>
