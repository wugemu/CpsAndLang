<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f4f4f4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_time_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:listSelector="#00000000"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profit_background_style"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:scrollbars="none"
        >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="结算收入："
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/fragment_profit_estimate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18"
            tools:text="0.00" />

    </LinearLayout>
       <View
           android:id="@+id/split1"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_0_5"
           android:layout_marginTop="@dimen/dp_8"
           android:background="#EEEEEE"
           />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_23"
                android:scaleType="centerCrop"
                android:src="@mipmap/profit_data"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:text="我的推广"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:layout_gravity="left"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    android:text="付款笔数(笔)"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/fragment_profit_number_my_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/color_333333"
                    tools:text="100"/>

            </LinearLayout>
            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_40"
                android:background="#EEEEEE"
                android:layout_gravity="center_horizontal"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/dp_10"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    android:gravity="left"
                    android:text="预估收入"
                    tools:ignore="HardcodedText" />



                    <TextView
                        android:id="@+id/fragment_profit_estimate_my_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_18"
                        android:gravity="left"
                        android:textColor="@color/color_333333"
                        android:layout_marginTop="@dimen/dp_2"
                        tools:text="1000000"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
       <View
           android:id="@+id/split2"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_0_5"
           android:layout_marginTop="@dimen/dp_16"
           android:background="#EEEEEE"
           />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_23"
                android:scaleType="centerCrop"
                android:src="@mipmap/profit_data"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:text="团队推广"
                tools:ignore="HardcodedText" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:layout_gravity="left"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    android:text="付款笔数(笔)"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/fragment_profit_number_team_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/color_333333"
                    tools:text="100"/>

            </LinearLayout>
            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_40"
                android:background="#EEEEEE"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_gravity="center_horizontal"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:layout_gravity="left"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    android:text="预估收入"
                    tools:ignore="HardcodedText" />



                    <TextView
                        android:id="@+id/fragment_profit_estimate_team_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_18"
                        android:layout_marginTop="@dimen/dp_2"
                        android:textColor="@color/color_333333"
                        tools:text="10000000"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
   </LinearLayout>
    </ScrollView>
</LinearLayout>