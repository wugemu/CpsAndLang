<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center">

        <TextView
            android:id="@+id/fragment_reset_password_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="#959595"
            android:text="当前手机号码131****7932"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fragment_reset_password_code"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@null"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="@dimen/sp_15"
                android:textColor="#666666"
                android:textColorHint="#959595"
                android:hint="请输入验证码"
                tools:ignore="HardcodedText,NestedWeights,TextFields"
                android:textCursorDrawable="@drawable/my_cursor"
                android:cursorVisible="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#939393"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_reset_password_code_btn"
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_21"
            android:layout_marginStart="@dimen/dp_21"
            android:background="@drawable/login_code_btn_style"
            android:gravity="center">

            <TextView
                android:id="@+id/fragment_reset_password_code_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#959595"
                android:text="获取验证码"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:orientation="vertical">

        <EditText
            android:id="@+id/fragment_reset_password_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/sp_15"
            android:textColor="#666666"
            android:textColorHint="#959595"
            android:hint="请设置密码"
            tools:ignore="HardcodedText"
            android:textCursorDrawable="@drawable/my_cursor"
            android:cursorVisible="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#939393"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:orientation="vertical">

        <EditText
            android:id="@+id/fragment_reset_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/sp_15"
            android:textColor="#666666"
            android:textColorHint="#959595"
            android:hint="请确认密码"
            tools:ignore="HardcodedText"
            android:textCursorDrawable="@drawable/my_cursor"
            android:cursorVisible="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#939393"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_reset_password_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_45"
        android:background="@drawable/login_btn_style"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:text="提交"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>