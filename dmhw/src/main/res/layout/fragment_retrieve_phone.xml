<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_28"
            android:layout_marginEnd="@dimen/dp_28">

            <EditText
                android:id="@+id/fragment_retrieve_phone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@null"
                android:digits="1234567890"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="@dimen/sp_15"
                android:textColor="#666666"
                android:textColorHint="#959595"
                android:hint="请输入手机号"
                tools:ignore="HardcodedText"
                android:textCursorDrawable="@drawable/my_cursor"
                android:cursorVisible="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#939393"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="right"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/fragment_retrieve_phone_not"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/mainColor"
                    android:text="手机不可用?"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_retrieve_phone_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_41"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_45"
            android:background="@drawable/login_btn_style"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:text="确定"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_retrieve_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="bottom">

        <LinearLayout
            android:id="@+id/fragment_retrieve_cancel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <Button
                android:id="@+id/fragment_retrieve_service"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_14"
                android:text="联系客服"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:background="#eaeaea"/>

            <Button
                android:id="@+id/fragment_retrieve_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_14"
                android:text="取消"
                tools:ignore="HardcodedText" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>