<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_7">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="@dimen/dp_9"
                    android:layout_height="@dimen/dp_18"
                    android:layout_margin="@dimen/dp_9"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/btn_back_default" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_list_search"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/search_page_background"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/search_icon_gray"/>

                <TextView
                    android:id="@+id/search_list_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:layout_marginStart="@dimen/dp_10"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_list_right_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/mainColor"
                    android:text="搜全网"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#f2f2f2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_list_screen_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/fragment_search_list_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/fragment_search_list_one_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#000000"
                    android:text="综合"
                    tools:ignore="HardcodedText" />
                <ImageView
                    android:id="@+id/fragment_search_list_zh"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:scaleType="fitXY"
                    android:src="@mipmap/more_pl_down"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_search_list_jingxuan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/fragment_search_list_jingxuan_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#000000"
                    android:text="精选"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_search_list_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/fragment_search_list_two_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#666666"
                    android:text="销量"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/fragment_search_list_two_image"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_11"
                    android:layout_marginStart="@dimen/dp_5"
                    android:scaleType="fitXY"
                    android:src="@mipmap/more_pl_normal"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_search_list_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/fragment_search_list_three_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#666666"
                    android:text="折扣"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/fragment_search_list_three_image"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_11"
                    android:layout_marginStart="@dimen/dp_5"
                    android:scaleType="fitXY"
                    android:src="@mipmap/more_pl_normal"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_search_list_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/fragment_search_list_four_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#666666"
                    android:text="价格"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/fragment_search_list_four_image"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_11"
                    android:layout_marginStart="@dimen/dp_5"
                    android:scaleType="fitXY"
                    android:src="@mipmap/more_pl_normal"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/shaixuan_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/search_list_check"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:gravity="center"
                        android:text="筛选"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#666666"
                        android:drawablePadding="5dp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#eaeaea"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/coupon_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#f2f2f2"
        >

        <ImageView
            android:layout_width="@dimen/dp_19"
            android:layout_height="13dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@mipmap/network_discount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="#333333"
            android:text="仅显示优惠券商品"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            tools:ignore="RtlHardcoded">

            <Switch
                android:id="@+id/network_list_switch"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_20"
                android:switchMinWidth="@dimen/dp_20"
                android:textOn="  "
                android:textOff="  "
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/wph_split"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#f2f2f2"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#00000000"
        android:background="@color/white"
        />
    </LinearLayout>
</LinearLayout>