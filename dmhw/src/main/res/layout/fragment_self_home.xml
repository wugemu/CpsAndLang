<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.lxkj.dmhw.fragment.self.SelfHomeFragment">


    <include layout="@layout/layout_homenew_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_top_bigact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/Transparent00000000"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RelativeLayout
                android:id="@+id/fragment_one_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:gravity="center"
                android:orientation="vertical"
                >

                <com.lxkj.dmhw.view.CircleImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/fragment_one_left_iv"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:scaleType="fitCenter"
                    tools:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_one_left_name"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:background="@drawable/bg_rect_black_2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22"
                    android:text="注册用户"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_8"
                    android:visibility="visible" />

            </RelativeLayout>
            <LinearLayout
                android:clickable="true"
                android:id="@+id/ll_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1.0"
                android:background="@drawable/bg_rect_white_18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_search_top"
                    android:scaleType="fitCenter"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_search_white" />

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:hint=""
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_marginRight="12dp"
                android:clickable="true"
                android:id="@+id/rl_notice"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_notice"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/fragment_one_message_common_white" />

                <TextView
                    android:id="@+id/tv_notice_dot"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/rect_red_point" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>