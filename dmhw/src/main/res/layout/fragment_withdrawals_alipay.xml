<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f4f4f4"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginTop="@dimen/dp_10"
       android:layout_marginStart="@dimen/dp_10"
       android:layout_marginEnd="@dimen/dp_10"
       >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <LinearLayout
           android:id="@+id/fragment_withdrawals_alipay_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
       <LinearLayout
           android:id="@+id/fragment_withdrawals_alipay_btn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@drawable/widthdraw_dmb_bg"
           android:paddingTop="@dimen/dp_10"
           android:paddingBottom="@dimen/dp_10"
           android:visibility="gone"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_45"
               android:layout_marginStart="@dimen/dp_12"
               android:layout_marginEnd="@dimen/dp_10"
               >

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_centerVertical="true"
                   >
                   <ImageView
                       android:layout_width="@dimen/dp_30"
                       android:layout_height="@dimen/dp_29"
                       android:src="@mipmap/cash_alipay"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/sp_15"
                       android:textColor="#333333"
                       android:text="支付宝号"
                       android:layout_marginStart="@dimen/dp_10"
                       android:layout_gravity="center_vertical"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/sp_10"
                       android:textColor="#a5a5a5"
                       android:text="预计三个工作日到账"
                       android:layout_marginStart="@dimen/dp_10"
                       android:layout_gravity="center_vertical"
                       android:visibility="gone"
                       />
               </LinearLayout>


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   >

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/sp_13"
                       android:textColor="#666666"
                       android:text="去设置"
                       android:layout_marginEnd="@dimen/dp_10"
                       />
                   <ImageView
                       android:layout_width="@dimen/dp_6"
                       android:layout_height="@dimen/dp_11"
                       android:src="@mipmap/fragment_five_arrow"
                       android:layout_gravity="center_vertical"
                       android:tint="#999999"
                       />
               </LinearLayout>

           </RelativeLayout>
       </LinearLayout>
       </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_withdrawals_alipay_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/widthdraw_dmb_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/fragment_withdrawals_alipay_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="测试"
                android:textColor="#666666"
                android:textSize="@dimen/sp_15"
                android:layout_marginStart="@dimen/dp_20"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <LinearLayout
                    android:id="@+id/fragment_withdrawals_alipay_account_amend"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:gravity="center"
                    android:background="@null">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="#999999"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:text="去更改"/>
                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_11"
                        android:src="@mipmap/fragment_five_arrow"
                        android:layout_gravity="center_vertical"
                        android:tint="#999999"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f6f6f6"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到支付宝"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/fragment_withdrawals_alipay_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="13812345678"
                android:textColor="#666666"
                android:textSize="@dimen/sp_15"
                android:layout_marginStart="@dimen/dp_20"
                />


        </LinearLayout>
    </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:orientation="vertical"
           android:background="@drawable/widthdraw_dmb_bg"
           android:layout_marginTop="@dimen/dp_10"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginStart="@dimen/dp_12"
               android:layout_marginEnd="@dimen/dp_10"
               android:layout_marginTop="@dimen/dp_15"
               android:layout_marginBottom="@dimen/dp_15"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="可提现 :"
                   android:textColor="#7C838D"
                   android:layout_gravity="center_vertical"
                   android:textSize="@dimen/sp_15"
                   tools:ignore="HardcodedText" />

               <TextView
                   android:id="@+id/fragment_withdrawals_alipay_money_text_two"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/dp_20"
                   android:layout_gravity="center_vertical"
                   tools:text="88888"
                   android:textColor="#1CA6EB"
                   android:textSize="@dimen/sp_15" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="right"
                   android:layout_gravity="center_vertical"
                   >
               <TextView
                   android:id="@+id/all_withdraw_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_13"
                   android:textColor="#000000"
                   android:layout_gravity="center_vertical"
                   android:singleLine="true"
                   android:text="全部提现"
                   android:paddingBottom="@dimen/dp_3"
                   android:paddingTop="@dimen/dp_3"
                   android:paddingStart="@dimen/dp_10"
                   android:paddingEnd="@dimen/dp_10"
                   android:background="@drawable/all_withdraw_bg"
                   />
               </LinearLayout>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#f6f6f6"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginStart="@dimen/dp_12"
               android:layout_marginEnd="@dimen/dp_10"
               android:layout_marginTop="@dimen/dp_15"
               android:layout_marginBottom="@dimen/dp_15"
               >
               <TextView
                   android:id="@+id/fragment_withdrawals_title"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="提现金额"
                   android:textColor="#333333"
                   android:textSize="@dimen/sp_15"
                   tools:ignore="HardcodedText" />

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_20"
                   >
                <LinearLayout
                    android:id="@+id/widthdraw_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="#121922"
                        android:textSize="@dimen/sp_24"
                        android:layout_gravity="bottom"
                        tools:ignore="HardcodedText" />
               <EditText
                   android:id="@+id/fragment_withdrawals_alipay_money_edit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/white"
                   android:textColor="#121922"
                   android:inputType="numberDecimal"
                   android:maxLength="12"
                   android:singleLine="true"
                   android:textSize="@dimen/sp_30"
                   tools:ignore="HardcodedText"
                   android:gravity="center_vertical"
                   tools:text="75"
                   android:textStyle="bold"
                   android:layout_marginStart="@dimen/dp_10"
                   android:layout_gravity="center_vertical"
                   />

                </LinearLayout>

                   <TextView
                   android:id="@+id/fragment_withdrawals_alipay_min_money_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:textSize="@dimen/sp_15"
                   android:textColor="#CCCCCC"
                   tools:text="最低提现金额为10元"
                   android:layout_marginStart="@dimen/dp_20"
                   android:paddingTop="@dimen/dp_12"
                       />
                   <TextView
                       android:id="@+id/toast_tv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:paddingTop="@dimen/dp_12"
                       android:textSize="@dimen/sp_13"
                       android:textColor="#000000"
                       tools:text="超出最大金额"
                       />
               </RelativeLayout>
           </LinearLayout>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:paddingTop="@dimen/dp_12"
           android:paddingBottom="@dimen/dp_12"
           android:layout_marginStart="@dimen/dp_7"
           android:layout_marginEnd="@dimen/dp_6"
           android:paddingEnd="@dimen/dp_9"
           android:layout_marginTop="@dimen/dp_8"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/sp_14"
               android:textColor="#666666"
               android:text="提现说明:"
               tools:ignore="HardcodedText" />

           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:fillViewport="true"
               android:scrollbars="none">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   tools:ignore="ScrollViewSize">

                   <TextView
                       android:id="@+id/fragment_withdrawals_alipay_explain"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/dp_12"
                       android:textSize="@dimen/sp_12"
                       android:textColor="#999999"
                       tools:text="试测试试测试试测试"/>

               </LinearLayout>

           </ScrollView>

       </LinearLayout>


       <LinearLayout
           android:id="@+id/fragment_withdrawals_alipay_submission_btn"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_44"
           android:layout_marginTop="@dimen/dp_30"
           android:layout_marginBottom="@dimen/dp_24"
           android:gravity="center"
           android:background="@drawable/withdraw_btn_style">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/sp_16"
               android:textColor="#FFFFFF"
               android:text="确认提现"
               android:textStyle="bold"
               tools:ignore="HardcodedText" />

       </LinearLayout>






   </LinearLayout>









</LinearLayout>