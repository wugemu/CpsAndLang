<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        >
    <LinearLayout
        android:id="@+id/fragment_withdrawals_alipay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/widthdraw_dmb_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_10"
        >

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_centerVertical="true"
         >
      <ImageView
          android:layout_width="@dimen/dp_19"
          android:layout_height="@dimen/dp_19"
          android:src="@mipmap/cash_alipay"
          />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/sp_13"
             android:textColor="#333333"
             android:text="支付宝"
             android:layout_marginStart="@dimen/dp_10"
            />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/sp_10"
             android:textColor="#a5a5a5"
             android:text="预计三个工作日到账"
             android:layout_marginStart="@dimen/dp_10"
             />
     </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#a5a5a5"
                android:text="未设置"
                android:layout_marginEnd="@dimen/dp_10"
                />
            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_11"
                android:src="@mipmap/fragment_five_arrow"
                android:layout_gravity="center_vertical"
                android:tint="#333333"
                />
        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_withdrawals_alipay_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/widthdraw_dmb_bg"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_15"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到支付宝"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/fragment_withdrawals_alipay_account_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="13812345678"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginStart="@dimen/dp_20"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <LinearLayout
                        android:id="@+id/fragment_withdrawals_alipay_account_amend"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_25"
                        android:gravity="center"
                        android:background="@drawable/login_code_btn_style">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_12"
                            android:textColor="#999999"
                            android:text="修改"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#f6f6f6"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="真实姓名"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/fragment_withdrawals_alipay_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="测试"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginStart="@dimen/dp_20"
                    />

            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/widthdraw_dmb_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingTop="@dimen/dp_20"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            >
            <TextView
                android:id="@+id/fragment_withdrawals_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/fragment_withdrawals_alipay_money_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="请输入金额"
                android:textColor="#666666"
                android:textColorHint="#999999"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:singleLine="true"
                android:textSize="@dimen/sp_15"
                tools:ignore="HardcodedText"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_20"
                android:textCursorDrawable="@drawable/my_cursor"
                android:cursorVisible="true"
                />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f6f6f6"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提金额"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_15"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/fragment_withdrawals_alipay_money_text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            tools:text="20.50"
            android:textColor="#2089DA"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:id="@+id/fragment_withdrawals_alipay_min_money_textlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            tools:ignore="RtlHardcoded"
            >

            <TextView
                android:id="@+id/fragment_withdrawals_alipay_min_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_12"
                android:textColor="#999999"
                android:text="最低提现金额为10元"
                />

            <ImageView
                android:id="@+id/w_question_iv"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/question_icon"
                />

        </LinearLayout>
            <TextView
                android:id="@+id/toast_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#EE2325"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:gravity="right"
                android:text="最低提现金额为10元"
                />
        </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_1"
           android:background="#f6f6f6"
           />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待结金额"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/fragment_withdrawals_alipay_money_text_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                tools:text="20.50"
                android:textColor="#EE2325"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/fragment_withdrawals_alipay_min_money_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    android:layout_gravity="center_vertical"
                    android:text="待结算金额"/>

                <ImageView
                    android:id="@+id/w_question_iv1"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/question_icon"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_withdrawals_alipay_submission_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:background="@drawable/dmb_btn_style"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:textSize="@dimen/sp_15"
                android:textColor="#FCF8F8"
                android:text="确认提现"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>