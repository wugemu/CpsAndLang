<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/header_fragment_one_new_sort_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/header_fragment_one_new_sort_one_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/mainColor"
                android:text="综合"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_fragment_one_new_sort_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/header_fragment_one_new_sort_two_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#666666"
                android:text="销量"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/header_fragment_one_new_sort_two_image"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_11"
                android:layout_marginStart="@dimen/dp_5"
                android:scaleType="fitXY"
                android:src="@mipmap/fragment_team_default"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_fragment_one_new_sort_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/header_fragment_one_new_sort_three_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#666666"
                android:text="佣金"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/header_fragment_one_new_sort_three_image"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_11"
                android:layout_marginStart="@dimen/dp_5"
                android:scaleType="fitXY"
                android:src="@mipmap/fragment_team_default"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_fragment_one_new_sort_four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/header_fragment_one_new_sort_four_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#666666"
                android:text="价格"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/header_fragment_one_new_sort_four_image"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_11"
                android:layout_marginStart="@dimen/dp_5"
                android:scaleType="fitXY"
                android:src="@mipmap/fragment_team_default"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="#eaeaea"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/header_fragment_one_new_screen_check"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="筛选"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#666666"
                    android:drawablePadding="7dp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#f4f4f4"/>
</LinearLayout>