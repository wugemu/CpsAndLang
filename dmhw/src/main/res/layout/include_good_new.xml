<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_good_new"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好物种草"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多 >"
            android:textColor="#555555"
            android:textSize="12sp"/>
    </RelativeLayout>

    <com.lxkj.dmhw.view.ScaleLayout
        android:id="@+id/onframgent_good_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:widthToHeight="0.85"
        >
        <ImageView
            android:id="@+id/onframgent_goodnew_Bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:id="@+id/good_new_magicindicator_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <net.lucode.hackware.magicindicator.MagicIndicator
                android:visibility="gone"
                android:id="@+id/good_new_magicindicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v4.view.ViewPager
                android:id="@+id/good_new_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <SeekBar
            android:id="@+id/good_new_progress_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_3"
            android:focusable="true"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:progressDrawable="@null"
            android:background="@drawable/seekbar_progress"
            android:thumb="@drawable/seekbar_thumb"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:progress="0"
            android:visibility="visible"
            />
    </com.lxkj.dmhw.view.ScaleLayout>

</LinearLayout>
