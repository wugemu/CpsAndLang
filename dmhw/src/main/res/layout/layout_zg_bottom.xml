<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_zg_dialog"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">
        <View android:layout_width="match_parent"
            android:id="@+id/view_bg"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:background="#80000000"
            />

        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:background="@color/colorBackGroud"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackText"
                    android:textSize="15sp"
                    android:text="已选商品"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:src="@mipmap/zg_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/tv_zg_delete"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackText"
                    android:text="清空购物车"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
            <com.lxkj.dmhw.widget.MaxHeightRecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:maxHeight="404dp"
                android:id="@+id/rv_zg_goods"
                />
        </LinearLayout>

    </LinearLayout>

   <RelativeLayout
       android:id="@+id/ll_zg_bottom"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@color/colorBlackText"
       >
       <LinearLayout
           android:layout_toLeftOf="@+id/tv_jiesuan"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           >
           <RelativeLayout
               android:layout_marginLeft="20dp"
               android:layout_width="wrap_content"
               android:layout_height="match_parent">
               <ImageView
                   android:id="@+id/iv_gwd"
                   android:layout_centerVertical="true"
                   android:layout_width="29dp"
                   android:layout_height="34dp"
                    android:src="@mipmap/live_video_product_icon"
                   />

               <TextView
                   android:background="@drawable/bg_rect_red_new7"
                   android:layout_width="19dp"
                   android:layout_height="14dp"
                   android:id="@+id/tv_zg_dot"
                   android:textColor="@color/colorWhite"
                   android:layout_marginTop="6dp"
                   android:text="10"
                   android:textSize="10sp"
                   android:gravity="center"
                   android:layout_marginLeft="22dp"
                   />
           </RelativeLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginLeft="16dp"
               >
               <TextView
                   android:includeFontPadding="false"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/tv_zg_sum_price"
                   android:textSize="16sp"
                   android:textColor="@color/colorWhite"
                    android:text="￥111"
                   android:visibility="gone"
                   />

               <TextView
                   android:text="可得进货返点￥232"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/tv_zg_fd"
                   android:textColor="@color/colorBlackText2"
                   android:textSize="11sp"
                   android:visibility="gone"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/tv_no_select"
                   android:textSize="14sp"
                   android:textColor="@color/colorBlackText2"
                   android:text="未选购商品"

                   />
           </LinearLayout>

       </LinearLayout>
       <TextView
           android:layout_alignParentRight="true"
           android:gravity="center"
           android:layout_width="120dp"
           android:layout_height="match_parent"
           android:textColor="@color/colorWhite"
           android:id="@+id/tv_jiesuan"
           android:text="去结算"
           android:textSize="15sp"
           android:textStyle="bold"
           android:background="@color/colorBlackText3"/>
   </RelativeLayout>

</LinearLayout>