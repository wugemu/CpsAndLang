<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_settlement_top">
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorBackGroud" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_post_img"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cart_post"/>
            <TextView
                android:id="@+id/tv_post_tip"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_post_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="国内发货"
                android:textColor="@color/colorBlackText" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_post_tip_tip"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_post_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="(不支持配送至该地址)"
                android:textColor="@color/colorRedMain" />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/iv_product_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/view_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80000000"
                android:visibility="gone" />

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_product_status"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/cart_is_empty"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp">
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="14sp"
                android:textColor="@color/colorBlackText"
                android:ellipsize="end"
                android:text="" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_unit"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/colorBlackText2"
                android:layout_below="@+id/tv_product_name"
                />
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tax_fee"
                android:text="税费"
                android:textSize="11sp"
                android:textColor="@color/colorBlackText2"
                android:layout_below="@+id/tv_unit"
                />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRedMain"
                android:textSize="15sp"
                android:text=""
                android:layout_below="@+id/tv_tax_fee"
                />
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_discount"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/colorBlackText2"
                android:layout_below="@+id/tv_tax_fee"
                android:layout_toRightOf="@+id/tv_price"
                />

            <TextView
                android:layout_below="@+id/tv_tax_fee"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_goodnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlackText"
                android:textSize="13sp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_fanquan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_left_tip"
            android:layout_width="32dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="返券"
            android:textSize="10sp"
            android:textColor="@color/colorRedMain"
            android:background="@drawable/bg_rect_stroke_red"/>
        <ImageView
            android:id="@+id/iv_help_fanquan"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@mipmap/help"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tv_fanquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorBlackText"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>
</LinearLayout>
