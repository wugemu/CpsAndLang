<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50">

    <RelativeLayout
        android:id="@+id/free_user_layout"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/room_img"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        >
        <ImageView
            android:id="@+id/free_user_iv"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:src="@mipmap/daimeng"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/free_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/free_user_layout"
        android:textColor="#333333"
        android:textSize="@dimen/sp_13"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"
         tools:text="NN俱乐部"
         />

    <TextView
        android:id="@+id/free_userphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="@dimen/sp_13"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_10"
        tools:text="15825999565"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
     <TextView
         android:id="@+id/split"
         android:layout_width="@dimen/dp_55"
         android:layout_height="match_parent"
         android:background="@null"
         />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/m_arrow"
        android:layout_width="@dimen/dp_6"
        android:layout_height="@dimen/dp_11"
        android:scaleType="centerCrop"
        android:src="@mipmap/arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:visibility="gone"
        />
</RelativeLayout>