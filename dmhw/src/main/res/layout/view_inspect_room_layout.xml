<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/free_detail_item_layout"
    android:background="@color/cube_mints_f1f1f1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        >
    <RelativeLayout
        android:id="@+id/headprotrait_layout"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_marginStart="@dimen/dp_10"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:background="@drawable/team_icon_backround"
            />

        <ImageView
            android:id="@+id/menber_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:background="@mipmap/daimeng"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toRightOf="@+id/headprotrait_layout"
        >
        <RelativeLayout
            android:id="@+id/room_iv_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_120"
            >
        <com.lxkj.dmhw.view.RoundImageView
        android:id="@+id/room_iv"
            android:layout_width="200dp"
            android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/goodsbg"
            />
            <com.lxkj.dmhw.view.RoundImageView
                android:id="@+id/room_video_iv"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/goodsbg" />
        <ImageView
            android:id="@+id/commodity_video"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:scaleType="centerCrop"
           android:layout_centerInParent="true"
            android:src="@mipmap/commodity_video"
            />
        </RelativeLayout>
        <TextView
            android:id="@+id/room_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_70"
            android:background="@drawable/inspect_room_txt_bg"
            android:padding="@dimen/dp_10"
            android:textColor="#333"
            android:textSize="@dimen/sp_15"
            android:gravity="left"
            tools:text="【第二件11元】回忆杀，经典80.90后零食，乳酸+果汁多种口味，多重享受！香甜可口，爽滑水润，回味无穷，亲亲品质保证！拍一件15支16.8元！拍两件30支仅27.8元，速抢！" />

    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
