<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/network_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:id="@+id/net_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/no_net"

                />
            <TextView
                android:id="@+id/net_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/net_work_unconnect"
                android:textColor="@color/color_666666"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_17"
                android:layout_below="@+id/net_img"
                />
            <TextView
                android:id="@+id/net_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/net_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/net_work_refresh"
                android:textColor="@color/color_999999"
                android:layout_marginBottom="@dimen/dp_20"
                android:textSize="@dimen/sp_12">
            </TextView>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
