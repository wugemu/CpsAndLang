<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1080px"
    android:layout_height="1920px"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:ignore="PxUsage">
    <LinearLayout
        android:id="@+id/total_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30px"
            android:layout_marginEnd="30px"
            android:paddingTop="30px"
            android:paddingBottom="30px"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="168px"
                android:layout_height="168px"
                android:layout_marginStart="45px"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/team_icon_backround"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <com.lxkj.dmhw.view.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="168px"
                    android:layout_height="168px"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px"
                android:layout_marginEnd="45px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="5"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#333333"
                        android:textSize="54px"
                        tools:text="林腾晖哈哈" />

                    <ImageView
                        android:id="@+id/rank_iv"
                        android:layout_width="165px"
                        android:layout_height="45px"
                        android:layout_marginStart="15px"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/huiyuan_little"/>
                </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:lineSpacingMultiplier="0.9"
                        android:layout_marginTop="20px"
                        android:text="推荐一个好物，快来抢哦"
                        android:textColor="@color/color_666666"
                        android:textSize="39px"
                        tools:ignore="HardcodedText,SmallSp" />


            </LinearLayout>

        </LinearLayout>
        <com.lxkj.dmhw.view.RoundImageViewNew
            android:id="@+id/view_share_image"
            android:layout_width="1020px"
            android:layout_height="1020px"
            android:layout_marginStart="30px"
            android:layout_marginEnd="30px"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            tools:src="@color/black"
            app:borderRadius="15px"
            app:bottom_right="false"
            app:bottom_left="false"
            app:roundType="round"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="30px"
        android:layout_marginEnd="30px"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@drawable/share_image_bg"
          android:paddingBottom="30px"
          >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="45px"
          android:layout_marginStart="30px"
          android:layout_marginEnd="30px"
          >
        <ImageView
            android:id="@+id/view_share_type"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_marginTop="4px"
            android:src="@mipmap/pdd_icon"/>

        <TextView
            android:id="@+id/view_share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="1.0"
            android:lineSpacingExtra="6px"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="48px"
            android:textColor="#333333"
            tools:text="测试测试测试测试测试测试测试测试测试测试测试测试测试"/>
      </RelativeLayout>


            <LinearLayout
                android:id="@+id/quanhoujia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px"
                android:layout_marginEnd="30px"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:textSize="36px"
                    android:textColor="#F2263C"
                    android:text="券后价:  ¥"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/view_share_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:textSize="72px"
                    android:textColor="#F2263C"
                    android:textStyle="bold"
                    tools:text="9.8" />

                <TextView
                    android:id="@+id/view_share_yuanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:textSize="36px"
                    android:textColor="#999999"
                    android:layout_marginStart="30px"
                    tools:text="原价 ¥19.8"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <TextView
                    android:id="@+id/view_share_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:layout_alignParentRight="true"
                    android:textSize="36px"
                    android:textColor="#999999"
                    tools:text="123人已购"/>
                </RelativeLayout>
            </LinearLayout>

      </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:layout_marginStart="30px"
            android:layout_marginEnd="30px"
            android:gravity="center_vertical"
            android:background="@mipmap/littleapp_coupon_bg">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1.22">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:id="@+id/commodity_discount_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            android:textSize="100px"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:text="100"/>

                        <TextView
                            android:id="@+id/commodity_discount_text01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            android:textSize="90px"
                            android:textColor="@color/white"
                            android:text="元优惠券"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/weipinhui_explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="36px"
                        android:textColor="@color/white"
                        android:text="长按识别小程序码立即购买"
                        tools:ignore="HardcodedText,SmallSp"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:id="@+id/time_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="36px"
                            android:textColor="@color/white"
                            android:text="使用期限："
                            tools:ignore="HardcodedText,SmallSp" />

                        <TextView
                            android:id="@+id/commodity_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="36px"
                            android:textColor="@color/white"
                            tools:text="2018.08.07"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:layout_width="24px"
                            android:layout_height="3px"
                            android:background="@color/white"
                            android:layout_gravity="center_vertical"
                            tools:ignore="HardcodedText,SmallSp" />

                        <TextView
                            android:id="@+id/commodity_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="36px"
                            android:textColor="@color/white"
                            tools:text="2018.09.07"
                            tools:ignore="SmallSp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/commodity_discount_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="0.6">
                <ImageView
                    android:id="@+id/view_share_qr"
                    android:layout_width="220px"
                    android:layout_height="220px"
                    tools:src="@color/black"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>